{
  "name": "@oneie/monorepo",
  "version": "2.0.0",
  "private": true,
  "description": "ONE Platform - AI-native platform built on 6-dimension ontology. Transform ideas into production-ready websites using 8 AI agents.",
  "type": "module",
  "packageManager": "bun@1.2.19",
  "workspaces": [
    "web",
    "cli",
    "backend"
  ],
  "scripts": {
    "dev": "bun run --filter web dev",
    "dev:web": "cd web && bun run dev",
    "dev:backend": "cd backend && npx convex dev",
    "dev:all": "concurrently \"bun run dev:web\" \"bun run dev:backend\"",
    "build": "bun run build:cli && bun run build:web",
    "build:web": "cd web && bun run build",
    "build:cli": "cd cli && bun run build",
    "build:backend": "cd backend && npx convex deploy",
    "test": "bun run --filter web test",
    "test:web": "cd web && bun test",
    "test:auth": "cd web && bun test test/auth",
    "test:groups": "cd web && bun test test/groups",
    "lint": "bun run --filter web lint",
    "format": "prettier --write \"**/*.{ts,tsx,astro,md,json}\"",
    "typecheck": "cd web && bunx astro check",
    "clean": "rm -rf web/dist web/node_modules cli/dist cli/node_modules backend/node_modules",
    "deploy": "bun run deploy:web && bun run deploy:backend",
    "deploy:web": "cd web && wrangler pages deploy dist --project-name=one-platform",
    "deploy:backend": "cd backend && npx convex deploy",
    "cli:publish": "cd cli && npm publish",
    "install:all": "bun install && cd cli && bun install && cd ../backend && npm install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/one-ie/one.git"
  },
  "homepage": "https://one.ie",
  "bugs": {
    "url": "https://github.com/one-ie/one/issues"
  },
  "keywords": [
    "one",
    "ontology",
    "6-dimension",
    "ai-agents",
    "astro",
    "react",
    "convex",
    "website-builder",
    "open-source",
    "claude",
    "ai",
    "monorepo"
  ],
  "author": "Anthony O'Connell <anthony@one.ie>",
  "license": "SEE LICENSE IN https://one.ie/free-license",
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.2.0"
  },
  "devDependencies": {
    "@vitest/ui": "^3.2.4",
    "concurrently": "^9.1.2",
    "prettier": "^3.6.2",
    "prettier-plugin-astro": "^0.14.1",
    "vitest": "^3.2.4"
  },
  "dependencies": {},
  "funding": {
    "type": "individual",
    "url": "https://one.ie/pricing"
  }
}
