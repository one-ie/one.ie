# ================================
# Environment Variables Template
# ================================
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local to version control!

# ================================
# Stripe Payment Processing
# ================================
# Get your keys from https://dashboard.stripe.com/apikeys
# Toggle "Test mode" ON for development keys

# Public key (safe to expose in browser)
PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Secret key (NEVER expose in browser, server-side only)
STRIPE_SECRET_KEY=sk_test_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ================================
# Convex Backend (Real-time Database)
# ================================
# Get from https://dashboard.convex.dev/deployment/settings

# Public Convex URL (safe to expose in browser)
PUBLIC_CONVEX_URL=https://your-deployment-name.convex.cloud

# Convex deployment ID (for backend operations)
CONVEX_DEPLOYMENT=prod:your-deployment-name

# Alternative naming (for compatibility with Next.js apps)
# NEXT_PUBLIC_CONVEX_URL=https://your-deployment-name.convex.cloud

# ================================
# Better Auth (Authentication)
# ================================
# Generate a secure random string (32+ characters)
# Generate with: openssl rand -base64 32

BETTER_AUTH_SECRET=your-secret-key-here-minimum-32-characters-long

# Base URL for authentication redirects
BETTER_AUTH_URL=http://localhost:4321

# ================================
# Backend Provider Configuration
# ================================
# Options: "convex", "wordpress", "notion", "supabase", "markdown"
# Default: "convex"

BACKEND_PROVIDER=convex
# PUBLIC_BACKEND_PROVIDER=convex  # Alternative naming

# ================================
# Organization Settings
# ================================
# Customize for your organization

ORG_NAME=ONE
ORG_WEBSITE=https://one.ie

# ================================
# Feature Flags
# ================================
# JSON string of enabled features
# Example: {"auth":true,"payments":true,"dashboard":true}

# VITE_FEATURES={"auth":true,"payments":true}

# ================================
# WordPress Backend (Optional)
# ================================
# Only needed if using WordPress as backend provider
# Generate app password: WordPress Admin → Users → Application Passwords

# WORDPRESS_URL=https://your-wordpress-site.com
# WORDPRESS_USERNAME=your-username
# WORDPRESS_APP_PASSWORD=xxxx-xxxx-xxxx-xxxx-xxxx-xxxx

# ================================
# Notion Backend (Optional)
# ================================
# Only needed if using Notion as backend provider
# Get integration token: https://www.notion.so/my-integrations

# NOTION_TOKEN=secret_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
# NOTION_DATABASE_ID=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ================================
# Supabase Backend (Optional)
# ================================
# Only needed if using Supabase as backend provider
# Get from https://app.supabase.com/project/_/settings/api

# SUPABASE_URL=https://your-project.supabase.co
# SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.xxxxxxxxxxxxxxxxxxxxxxxxxxxxx
# SUPABASE_SERVICE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.xxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ================================
# Development Settings
# ================================

# Node environment
# NODE_ENV=development

# Port (default: 4321)
# PORT=4321

# ================================
# Production Settings
# ================================
# For production deployment, set:
# - NODE_ENV=production
# - Use production API keys (pk_live_, sk_live_)
# - Set BETTER_AUTH_URL to production domain
# - Set PUBLIC_CONVEX_URL to production deployment
# - Use strong BETTER_AUTH_SECRET (64+ characters)
