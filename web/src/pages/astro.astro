---
export const prerender = true;
import Layout from '../layouts/Layout.astro';
import { Badge } from '@/components/ui/badge';
import { Button } from '@/components/ui/button';
import { Card, CardHeader, CardTitle, CardDescription, CardContent } from '@/components/ui/card';
import {
  Globe,
  Zap,
  Code2,
  Sparkles,
  Rocket,
  Github,
  ArrowRight,
  Lock,
  Mail,
  Key,
  RotateCcw,
  MailOpen,
  Wand2,
  Shield,
  Target,
  FileText,
  Bot,
  Check,
  Palette,
  Atom,
  Moon,
  Users,
  Box,
  GitBranch,
  Activity,
  Brain,
  MessageSquare
} from 'lucide-react';
---
export const prerender = true;

<Layout title="Build Websites by Talking - ONE Platform" description="Just talk normally. The system validates against the ontology, generates production code, and deploys to 330+ edge locations. No coding required.">

  <!-- Hero Section -->
  <section class="relative min-h-[80vh] flex items-center justify-center px-4 py-20 sm:px-6 lg:px-8">
    <div class="absolute inset-0 -z-10 bg-gradient-to-b from-primary/5 via-primary/[0.02] to-background"></div>
    <div class="absolute inset-0 -z-10 bg-[radial-gradient(ellipse_at_top,_var(--tw-gradient-stops))] from-primary/20 via-primary/5 to-transparent"></div>
    <div class="absolute left-1/2 top-0 -z-10 h-[600px] w-[800px] -translate-x-1/2 rounded-full bg-primary/10 blur-[120px]"></div>

    <div class="w-full max-w-6xl mx-auto">
      <div class="text-center space-y-8">
        <Badge variant="outline" className="mb-4 inline-flex items-center gap-2">
          <Bot className="h-4 w-4" />
          Just Talk Normally
        </Badge>

        <h1 class="text-5xl sm:text-6xl md:text-7xl lg:text-8xl font-bold !leading-[1.1] tracking-tight">
          <span class="block">Build Websites</span>
          <span class="block gradient-text">
            By Talking
          </span>
        </h1>

        <p class="text-xl sm:text-2xl text-muted-foreground max-w-3xl mx-auto leading-relaxed">
          Describe what you want in plain English. The system validates it against the ontology, generates production code, and deploys to 330+ edge locations. <strong class="text-foreground">No coding required.</strong>
        </p>

        <div class="rounded-lg border border-primary/20 bg-primary/5 p-4 max-w-2xl mx-auto">
          <p class="text-sm font-mono text-foreground">
            "CREATE landing page WITH pricing table"
            <br />
            <span class="text-muted-foreground">→ Production website in 60 seconds</span>
          </p>
        </div>

        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center pt-8">
          <a href="https://github.com/one-ie/one" target="_blank" rel="noopener noreferrer">
            <Button size="lg" className="h-14 px-8 text-lg font-semibold">
              <Github className="mr-2 h-5 w-5" />
              Start Building
            </Button>
          </a>
          <a href="#examples">
            <Button variant="outline" size="lg" className="h-14 px-8 text-lg font-semibold">
              See Examples
              <ArrowRight className="ml-2 h-5 w-5" />
            </Button>
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- The Plain English DSL -->
  <section class="px-6 py-24 md:px-8 md:py-32">
    <div class="mx-auto max-w-6xl">
      <div class="mb-16 space-y-4 text-center">
        <Badge variant="outline" className="mb-2 inline-flex items-center gap-2">
          <MessageSquare className="h-4 w-4" />
          Plain English Commands
        </Badge>
        <h2 class="text-4xl font-bold leading-tight tracking-tight sm:text-5xl">
          Just Talk Normally
          <br />
          <span class="text-muted-foreground">The System Understands</span>
        </h2>
        <p class="mx-auto max-w-3xl text-lg leading-relaxed text-muted-foreground">
          Use simple commands like CREATE, ADD, CONNECT, and STYLE. Every command maps directly to the ontology and generates production-ready code.
        </p>
      </div>

      <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
        <Card className="border-border/50 bg-card/50 backdrop-blur">
          <CardHeader className="space-y-4">
            <div class="flex h-12 w-12 items-center justify-center rounded-lg bg-primary/10">
              <Code2 className="h-6 w-6 text-primary" />
            </div>
            <CardTitle className="text-lg">CREATE</CardTitle>
            <CardDescription className="leading-relaxed">
              Make new things - pages, forms, components
            </CardDescription>
            <pre class="text-xs bg-muted/50 p-2 rounded"><code>CREATE landing page
CREATE pricing table
CREATE contact form</code></pre>
          </CardHeader>
        </Card>

        <Card className="border-border/50 bg-card/50 backdrop-blur">
          <CardHeader className="space-y-4">
            <div class="flex h-12 w-12 items-center justify-center rounded-lg bg-primary/10">
              <Target className="h-6 w-6 text-primary" />
            </div>
            <CardTitle className="text-lg">ADD</CardTitle>
            <CardDescription className="leading-relaxed">
              Add features to existing things
            </CardDescription>
            <pre class="text-xs bg-muted/50 p-2 rounded"><code>ADD hero section
ADD feature grid
ADD testimonials</code></pre>
          </CardHeader>
        </Card>

        <Card className="border-border/50 bg-card/50 backdrop-blur">
          <CardHeader className="space-y-4">
            <div class="flex h-12 w-12 items-center justify-center rounded-lg bg-primary/10">
              <Palette className="h-6 w-6 text-primary" />
            </div>
            <CardTitle className="text-lg">STYLE</CardTitle>
            <CardDescription className="leading-relaxed">
              Apply visual design and themes
            </CardDescription>
            <pre class="text-xs bg-muted/50 p-2 rounded"><code>STYLE modern gradient
STYLE dark mode
STYLE minimal clean</code></pre>
          </CardHeader>
        </Card>

        <Card className="border-border/50 bg-card/50 backdrop-blur">
          <CardHeader className="space-y-4">
            <div class="flex h-12 w-12 items-center justify-center rounded-lg bg-primary/10">
              <GitBranch className="h-6 w-6 text-primary" />
            </div>
            <CardTitle className="text-lg">CONNECT</CardTitle>
            <CardDescription className="leading-relaxed">
              Link pages and add navigation
            </CardDescription>
            <pre class="text-xs bg-muted/50 p-2 rounded"><code>CONNECT to auth
CONNECT to database
CONNECT to API</code></pre>
          </CardHeader>
        </Card>

        <Card className="border-border/50 bg-card/50 backdrop-blur">
          <CardHeader className="space-y-4">
            <div class="flex h-12 w-12 items-center justify-center rounded-lg bg-primary/10">
              <Shield className="h-6 w-6 text-primary" />
            </div>
            <CardTitle className="text-lg">REQUIRE</CardTitle>
            <CardDescription className="leading-relaxed">
              Add authentication and protection
            </CardDescription>
            <pre class="text-xs bg-muted/50 p-2 rounded"><code>REQUIRE auth email
REQUIRE 2fa
PROTECT all routes</code></pre>
          </CardHeader>
        </Card>

        <Card className="border-border/50 bg-card/50 backdrop-blur">
          <CardHeader className="space-y-4">
            <div class="flex h-12 w-12 items-center justify-center rounded-lg bg-primary/10">
              <Rocket className="h-6 w-6 text-primary" />
            </div>
            <CardTitle className="text-lg">DEPLOY</CardTitle>
            <CardDescription className="leading-relaxed">
              Push to production at the edge
            </CardDescription>
            <pre class="text-xs bg-muted/50 p-2 rounded"><code>DEPLOY edge global
DEPLOY cloudflare
OPTIMIZE lighthouse</code></pre>
          </CardHeader>
        </Card>
      </div>
    </div>
  </section>

  <!-- The Ontology Foundation -->
  <section class="border-y bg-muted/50 px-6 py-24 md:px-8 md:py-32">
    <div class="mx-auto max-w-6xl">
      <div class="mb-16 space-y-4 text-center">
        <Badge variant="outline" className="mb-2 inline-flex items-center gap-2">
          <Atom className="h-4 w-4" />
          The Foundation
        </Badge>
        <h2 class="text-4xl font-bold leading-tight tracking-tight sm:text-5xl">
          Built on the ONE Ontology
          <br />
          <span class="text-muted-foreground">Five Primitives Drive Everything</span>
        </h2>
        <p class="mx-auto max-w-3xl text-lg leading-relaxed text-muted-foreground">
          Every command maps to one of five primitives. This isn't magic—it's a canonical data model that ensures type safety, consistency, and composability.
        </p>
      </div>

      <div class="space-y-6 max-w-3xl mx-auto">
        <Card className="border-border/50 bg-card/50 backdrop-blur">
          <CardHeader className="space-y-4">
            <div class="flex items-center gap-4">
              <div class="flex h-12 w-12 items-center justify-center rounded-lg bg-primary/10">
                <Users className="h-6 w-6 text-primary" />
              </div>
              <div class="flex-1">
                <CardTitle className="text-xl">People</CardTitle>
                <CardDescription className="leading-relaxed">
                  Declare intent, set guardrails, and approve execution. Humans retain control.
                </CardDescription>
              </div>
            </div>
          </CardHeader>
        </Card>

        <Card className="border-border/50 bg-card/50 backdrop-blur">
          <CardHeader className="space-y-4">
            <div class="flex items-center gap-4">
              <div class="flex h-12 w-12 items-center justify-center rounded-lg bg-primary/10">
                <Box className="h-6 w-6 text-primary" />
              </div>
              <div class="flex-1">
                <CardTitle className="text-xl">Things</CardTitle>
                <CardDescription className="leading-relaxed">
                  Every entity—pages, components, forms, users—with strong typing and versioned schemas.
                </CardDescription>
              </div>
            </div>
          </CardHeader>
        </Card>

        <Card className="border-border/50 bg-card/50 backdrop-blur">
          <CardHeader className="space-y-4">
            <div class="flex items-center gap-4">
              <div class="flex h-12 w-12 items-center justify-center rounded-lg bg-primary/10">
                <GitBranch className="h-6 w-6 text-primary" />
              </div>
              <div class="flex-1">
                <CardTitle className="text-xl">Connections</CardTitle>
                <CardDescription className="leading-relaxed">
                  Relationships between things—page contains form, user owns content—with directional, metadata-rich edges.
                </CardDescription>
              </div>
            </div>
          </CardHeader>
        </Card>

        <Card className="border-border/50 bg-card/50 backdrop-blur">
          <CardHeader className="space-y-4">
            <div class="flex items-center gap-4">
              <div class="flex h-12 w-12 items-center justify-center rounded-lg bg-primary/10">
                <Activity className="h-6 w-6 text-primary" />
              </div>
              <div class="flex-1">
                <CardTitle className="text-xl">Events</CardTitle>
                <CardDescription className="leading-relaxed">
                  Every action—page created, form submitted, deployment completed—as an immutable timeline.
                </CardDescription>
              </div>
            </div>
          </CardHeader>
        </Card>

        <Card className="border-border/50 bg-card/50 backdrop-blur">
          <CardHeader className="space-y-4">
            <div class="flex items-center gap-4">
              <div class="flex h-12 w-12 items-center justify-center rounded-lg bg-primary/10">
                <Brain className="h-6 w-6 text-primary" />
              </div>
              <div class="flex-1">
                <CardTitle className="text-xl">Knowledge</CardTitle>
                <CardDescription className="leading-relaxed">
                  Labels, embeddings, and context so the system can learn, suggest, and improve your websites.
                </CardDescription>
              </div>
            </div>
          </CardHeader>
        </Card>
      </div>

      <div class="mt-12 rounded-lg border border-primary/20 bg-primary/5 p-6 text-center max-w-3xl mx-auto">
        <p class="text-lg font-medium">
          <strong class="text-foreground">Every English command maps to these primitives.</strong> <span class="text-muted-foreground">The compiler validates against the ontology before generating code. If it breaks the model, you know before it ships.</span>
        </p>
      </div>
    </div>
  </section>

  <!-- How It Works -->
  <section class="px-6 py-24 md:px-8 md:py-32">
    <div class="mx-auto max-w-6xl">
      <div class="mb-16 space-y-4 text-center">
        <h2 class="text-4xl font-bold leading-tight tracking-tight sm:text-5xl">
          From English to Production
          <br />
          <span class="text-muted-foreground">In Six Steps</span>
        </h2>
        <p class="mx-auto max-w-3xl text-lg leading-relaxed text-muted-foreground">
          Watch how plain English becomes production code, validated and deployed globally in seconds.
        </p>
      </div>

      <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
        <Card className="border-border/50 bg-card/50 backdrop-blur">
          <CardHeader className="space-y-4">
            <div class="flex h-14 w-14 items-center justify-center rounded-xl bg-primary/10">
              <MessageSquare className="h-7 w-7 text-primary" />
            </div>
            <CardTitle className="text-xl">1. Write English</CardTitle>
            <CardDescription className="leading-relaxed">
              Describe what you want using simple commands
            </CardDescription>
          </CardHeader>
        </Card>

        <Card className="border-border/50 bg-card/50 backdrop-blur">
          <CardHeader className="space-y-4">
            <div class="flex h-14 w-14 items-center justify-center rounded-xl bg-primary/10">
              <Sparkles className="h-7 w-7 text-primary" />
            </div>
            <CardTitle className="text-xl">2. Validate Ontology</CardTitle>
            <CardDescription className="leading-relaxed">
              System checks every command maps to primitives
            </CardDescription>
          </CardHeader>
        </Card>

        <Card className="border-border/50 bg-card/50 backdrop-blur">
          <CardHeader className="space-y-4">
            <div class="flex h-14 w-14 items-center justify-center rounded-xl bg-primary/10">
              <Code2 className="h-7 w-7 text-primary" />
            </div>
            <CardTitle className="text-xl">3. Generate Code</CardTitle>
            <CardDescription className="leading-relaxed">
              Production TypeScript with tests and type safety
            </CardDescription>
          </CardHeader>
        </Card>

        <Card className="border-border/50 bg-card/50 backdrop-blur">
          <CardHeader className="space-y-4">
            <div class="flex h-14 w-14 items-center justify-center rounded-xl bg-primary/10">
              <Zap className="h-7 w-7 text-primary" />
            </div>
            <CardTitle className="text-xl">4. Run Tests</CardTitle>
            <CardDescription className="leading-relaxed">
              Automatic testing ensures everything works
            </CardDescription>
          </CardHeader>
        </Card>

        <Card className="border-border/50 bg-card/50 backdrop-blur">
          <CardHeader className="space-y-4">
            <div class="flex h-14 w-14 items-center justify-center rounded-xl bg-primary/10">
              <Target className="h-7 w-7 text-primary" />
            </div>
            <CardTitle className="text-xl">5. Optimize Build</CardTitle>
            <CardDescription className="leading-relaxed">
              100/100 Lighthouse score, perfect accessibility
            </CardDescription>
          </CardHeader>
        </Card>

        <Card className="border-border/50 bg-card/50 backdrop-blur">
          <CardHeader className="space-y-4">
            <div class="flex h-14 w-14 items-center justify-center rounded-xl bg-primary/10">
              <Rocket className="h-7 w-7 text-primary" />
            </div>
            <CardTitle className="text-xl">6. Deploy Global</CardTitle>
            <CardDescription className="leading-relaxed">
              Live at 330+ edge locations in 60 seconds
            </CardDescription>
          </CardHeader>
        </Card>
      </div>
    </div>
  </section>

  <!-- Stats Section -->
  <section class="border-y bg-muted/50 px-4 py-16 sm:px-6 md:px-8">
    <div class="mx-auto max-w-6xl">
      <div class="grid gap-12 sm:grid-cols-2 lg:grid-cols-4">
        <div class="space-y-2 text-center">
          <div class="text-5xl font-bold text-primary">6</div>
          <div class="text-sm font-medium uppercase tracking-wide text-muted-foreground">Auth Methods</div>
        </div>
        <div class="space-y-2 text-center">
          <div class="text-5xl font-bold text-primary">50+</div>
          <div class="text-sm font-medium uppercase tracking-wide text-muted-foreground">UI Components</div>
        </div>
        <div class="space-y-2 text-center">
          <div class="text-5xl font-bold text-primary">100</div>
          <div class="text-sm font-medium uppercase tracking-wide text-muted-foreground">Lighthouse Score</div>
        </div>
        <div class="space-y-2 text-center">
          <div class="text-5xl font-bold text-primary">330+</div>
          <div class="text-sm font-medium uppercase tracking-wide text-muted-foreground">Edge Locations</div>
        </div>
      </div>
    </div>
  </section>

  <!-- Authentication Showcase -->
  <section class="px-4 py-20 sm:px-6 sm:py-24 md:px-8 md:py-32">
    <div class="mx-auto max-w-6xl">
      <div class="mb-16 space-y-4 text-center">
        <Badge variant="outline" className="mb-2 inline-flex items-center gap-2">
          <Lock className="h-4 w-4" />
          Enterprise Authentication
        </Badge>
        <h2 class="text-4xl font-bold leading-tight tracking-tight sm:text-5xl">
          6 Authentication Methods
          <br />
          <span class="text-muted-foreground">Pre-Configured & Ready</span>
        </h2>
        <p class="mx-auto max-w-3xl text-lg leading-relaxed text-muted-foreground">
          Email/password, OAuth, magic links, 2FA, password reset, and email verification — all working out of the box with plain English commands.
        </p>
      </div>

      <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
        <Card className="group border-border/50 bg-card/50 backdrop-blur transition-all hover:scale-[1.02] hover:border-primary/20">
          <CardHeader className="space-y-4">
            <div class="flex h-12 w-12 items-center justify-center rounded-lg bg-primary/10 transition-colors group-hover:bg-primary/15">
              <Mail className="h-6 w-6 text-primary" />
            </div>
            <CardTitle className="text-xl">Email/Password</CardTitle>
            <CardDescription className="leading-relaxed">
              Secure password hashing, session management, HttpOnly cookies built-in.
            </CardDescription>
          </CardHeader>
        </Card>

        <Card className="group border-border/50 bg-card/50 backdrop-blur transition-all hover:scale-[1.02] hover:border-primary/20">
          <CardHeader className="space-y-4">
            <div class="flex h-12 w-12 items-center justify-center rounded-lg bg-primary/10 transition-colors group-hover:bg-primary/15">
              <Key className="h-6 w-6 text-primary" />
            </div>
            <CardTitle className="text-xl">OAuth Social Login</CardTitle>
            <CardDescription className="leading-relaxed">
              GitHub and Google OAuth pre-configured. Add more providers in minutes.
            </CardDescription>
          </CardHeader>
        </Card>

        <Card className="group border-border/50 bg-card/50 backdrop-blur transition-all hover:scale-[1.02] hover:border-primary/20">
          <CardHeader className="space-y-4">
            <div class="flex h-12 w-12 items-center justify-center rounded-lg bg-primary/10 transition-colors group-hover:bg-primary/15">
              <RotateCcw className="h-6 w-6 text-primary" />
            </div>
            <CardTitle className="text-xl">Password Reset</CardTitle>
            <CardDescription className="leading-relaxed">
              Email-based reset with secure tokens. Custom HTML templates included.
            </CardDescription>
          </CardHeader>
        </Card>

        <Card className="group border-border/50 bg-card/50 backdrop-blur transition-all hover:scale-[1.02] hover:border-primary/20">
          <CardHeader className="space-y-4">
            <div class="flex h-12 w-12 items-center justify-center rounded-lg bg-primary/10 transition-colors group-hover:bg-primary/15">
              <MailOpen className="h-6 w-6 text-primary" />
            </div>
            <CardTitle className="text-xl">Email Verification</CardTitle>
            <CardDescription className="leading-relaxed">
              Automated verification emails on sign-up with beautiful templates.
            </CardDescription>
          </CardHeader>
        </Card>

        <Card className="group border-border/50 bg-card/50 backdrop-blur transition-all hover:scale-[1.02] hover:border-primary/20">
          <CardHeader className="space-y-4">
            <div class="flex h-12 w-12 items-center justify-center rounded-lg bg-primary/10 transition-colors group-hover:bg-primary/15">
              <Wand2 className="h-6 w-6 text-primary" />
