---
import Layout from "@/layouts/Layout.astro";
import { PluginAnalyticsDashboard } from "@/components/features/plugins/PluginAnalyticsDashboard";

const title = "Plugin Analytics";
const description = "Monitor plugin usage and performance";
---

<Layout title={title} description={description}>
  <div class="container mx-auto px-4 py-8">
    <div class="mb-8">
      <h1 class="text-4xl font-bold mb-2">Plugin Analytics</h1>
      <p class="text-muted-foreground">
        Monitor plugin usage, performance metrics, and identify optimization opportunities
      </p>
    </div>

    <PluginAnalyticsDashboard client:load />
  </div>
</Layout>
