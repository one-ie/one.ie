const colorClasses: Record<string, { bg: string; border: string; text: string }> = {
  blue: { bg: "bg-blue-50 dark:bg-blue-950", border: "border-blue-200 dark:border-blue-800", text: "text-blue-600 dark:text-blue-400" },
  purple: { bg: "bg-purple-50 dark:bg-purple-950", border: "border-purple-200 dark:border-purple-800", text: "text-purple-600 dark:text-purple-400" },
  green: { bg: "bg-green-50 dark:bg-green-950", border: "border-green-200 dark:border-green-800", text: "text-green-600 dark:text-green-400" },
  orange: { bg: "bg-orange-50 dark:bg-orange-950", border: "border-orange-200 dark:border-orange-800", text: "text-orange-600 dark:text-orange-400" },
  red: { bg: "bg-red-50 dark:bg-red-950", border: "border-red-200 dark:border-red-800", text: "text-red-600 dark:text-red-400" },
  yellow: { bg: "bg-yellow-50 dark:bg-yellow-950", border: "border-yellow-200 dark:border-yellow-800", text: "text-yellow-600 dark:text-yellow-400" },
  indigo: { bg: "bg-indigo-50 dark:bg-indigo-950", border: "border-indigo-200 dark:border-indigo-800", text: "text-indigo-600 dark:text-indigo-400" },
  cyan: { bg: "bg-cyan-50 dark:bg-cyan-950", border: "border-cyan-200 dark:border-cyan-800", text: "text-cyan-600 dark:text-cyan-400" },
  pink: { bg: "bg-pink-50 dark:bg-pink-950", border: "border-pink-200 dark:border-pink-800", text: "text-pink-600 dark:text-pink-400" }
};
---

<Layout
  title="Ontology UI Component Library"
  description="Explore 286+ production-ready components for the 6-dimension ontology"
>
  <!-- Hero Section -->
  <section class="mb-16">
    <div class="space-y-4 text-center">
      <h1 class="text-4xl sm:text-5xl md:text-6xl font-bold tracking-tight">
        Ontology UI
      </h1>
      <p class="text-xl text-muted-foreground max-w-3xl mx-auto">
        A complete UI component library with <span class="font-semibold">286+ production-ready components</span> mapped to the 6-dimension ontology
      </p>
      <div class="flex flex-wrap justify-center gap-3 pt-4">
        <Badge variant="outline">React 19</Badge>
        <Badge variant="outline">Tailwind v4</Badge>
        <Badge variant="outline">shadcn/ui</Badge>
        <Badge variant="outline">TypeScript</Badge>
        <Badge variant="outline">Convex Real-time</Badge>
      </div>
    </div>
  </section>

  <!-- Stats Section -->
  <section class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 mb-16">
    <Card>
      <CardHeader class="pb-3">
        <CardTitle class="text-sm font-medium">Total Components</CardTitle>
      </CardHeader>
      <CardContent>
        <div class="text-3xl font-bold">286+</div>
        <p class="text-xs text-muted-foreground mt-1">Production-ready components</p>
      </CardContent>
    </Card>

    <Card>
      <CardHeader class="pb-3">
        <CardTitle class="text-sm font-medium">Core Dimensions</CardTitle>
      </CardHeader>
      <CardContent>
        <div class="text-3xl font-bold">9</div>
        <p class="text-xs text-muted-foreground mt-1">Ontology categories</p>
      </CardContent>
    </Card>

    <Card>
      <CardHeader class="pb-3">
        <CardTitle class="text-sm font-medium">Feature Suites</CardTitle>
      </CardHeader>
      <CardContent>
        <div class="text-3xl font-bold">8+</div>
        <p class="text-xs text-muted-foreground mt-1">Advanced component sets</p>
      </CardContent>
    </Card>

    <Card>
      <CardHeader class="pb-3">
        <CardTitle class="text-sm font-medium">Themes</CardTitle>
      </CardHeader>
      <CardContent>
        <div class="text-3xl font-bold">2</div>
        <p class="text-xs text-muted-foreground mt-1">Dark & light mode</p>
      </CardContent>
    </Card>
  </section>

  <!-- Components Grid -->
  <section class="space-y-4">
    <h2 class="text-2xl font-bold">9 Ontology Dimensions</h2>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {showcases.map((showcase) => {
        const colors = colorClasses[showcase.color];
        return (
          <Card class={`border-2 transition-all hover:shadow-lg hover:scale-[1.02] ${colors.border} ${colors.bg}`}>
            <CardHeader>
              <div class="flex items-start justify-between mb-2">
                <span class="text-4xl">{showcase.icon}</span>
                <Badge variant="outline" class={colors.text}>{showcase.count} Components</Badge>
              </div>
              <CardTitle class="text-xl">{showcase.name}</CardTitle>
              <CardDescription>{showcase.description}</CardDescription>
            </CardHeader>
            <CardContent class="space-y-4">
              <div>
                <p class="text-sm font-semibold mb-2">Featured Components:</p>
                <div class="flex flex-wrap gap-1">
                  {showcase.components.map((comp) => (
                    <Badge variant="secondary" class="text-xs">{comp}</Badge>
                  ))}
                </div>
              </div>
              <div>
                <p class="text-sm font-semibold mb-1">Use Cases:</p>
                <p class="text-sm text-muted-foreground">{showcase.useCase}</p>
              </div>
            </CardContent>
          </Card>
        );
      })}
    </div>
  </section>

  <!-- Additional Feature Suites -->
  <section class="mt-16 space-y-4">
    <h2 class="text-2xl font-bold">Additional Feature Suites</h2>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <Card>
        <CardHeader>
          <CardTitle class="text-lg flex items-center gap-2">
            <span>üöÄ</span> Streaming & Real-time
          </CardTitle>
          <CardDescription>36+ components for live data and streaming responses</CardDescription>
        </CardHeader>
        <CardContent>
          <p class="text-sm text-muted-foreground mb-3">
            Build real-time dashboards, live chat interfaces, and streaming data displays with automatic updates.
          </p>
          <p class="text-xs text-muted-foreground">ChatMessage, LiveActivityFeed, StreamingResponse, RealtimeTable, and more</p>
        </CardContent>
      </Card>

      <Card>
        <CardHeader>
          <CardTitle class="text-lg flex items-center gap-2">
            <span>üí∞</span> Crypto & Web3
          </CardTitle>
          <CardDescription>32+ components for blockchain and DeFi</CardDescription>
        </CardHeader>
        <CardContent>
          <p class="text-sm text-muted-foreground mb-3">
            Wallet integrations, DEX swaps, NFT galleries, token analysis, and payment processing.
          </p>
          <p class="text-xs text-muted-foreground">TokenSwap, NFTMarketplace, WalletBalance, LendingMarket, and more</p>
        </CardContent>
      </Card>

      <Card>
        <CardHeader>
          <CardTitle class="text-lg flex items-center gap-2">
            <span>üìä</span> Visualization
          </CardTitle>
          <CardDescription>4 advanced chart types</CardDescription>
        </CardHeader>
        <CardContent>
          <p class="text-sm text-muted-foreground mb-3">
            Network diagrams, Gantt charts, treemaps, and heatmaps for complex data visualization.
          </p>
          <p class="text-xs text-muted-foreground">NetworkDiagram, GanttChart, TreemapChart, HeatmapChart</p>
        </CardContent>
      </Card>

      <Card>
        <CardHeader>
          <CardTitle class="text-lg flex items-center gap-2">
            <span>‚ú®</span> Advanced Components
          </CardTitle>
          <CardDescription>12+ premium UI features</CardDescription>
        </CardHeader>
        <CardContent>
          <p class="text-sm text-muted-foreground mb-3">
            Rich text editors, file uploaders, date pickers, and custom color pickers.
          </p>
          <p class="text-xs text-muted-foreground">RichTextEditor, FileUploader, DateRangePicker, ColorPicker, and more</p>
        </CardContent>
      </Card>

      <Card>
        <CardHeader>
          <CardTitle class="text-lg flex items-center gap-2">
            <span>üîÑ</span> Enhanced Components
          </CardTitle>
          <CardDescription>20+ advanced UI variants</CardDescription>
        </CardHeader>
        <CardContent>
          <p class="text-sm text-muted-foreground mb-3">
            Virtual lists, drag-drop boards, split panes, and enhanced visualizations.
          </p>
          <p class="text-xs text-muted-foreground">VirtualizedList, DragDropBoard, SplitPane, InfiniteScroll, and more</p>
        </CardContent>
      </Card>

      <Card>
        <CardHeader>
          <CardTitle class="text-lg flex items-center gap-2">
            <span>üìß</span> Mail & Integration
          </CardTitle>
          <CardDescription>12+ email and integration components</CardDescription>
        </CardHeader>
        <CardContent>
          <p class="text-sm text-muted-foreground mb-3">
            Email inbox layouts, compose interfaces, and third-party integrations.
          </p>
          <p class="text-xs text-muted-foreground">MailComposer, InboxLayout, MailList, OntologyExplorer, and more</p>
        </CardContent>
      </Card>
    </div>
  </section>

  <!-- Architecture Section -->
  <section class="mt-16 space-y-4">
    <h2 class="text-2xl font-bold">Built with Modern Tech</h2>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <Card>
        <CardHeader>
          <CardTitle>Framework & Styling</CardTitle>
        </CardHeader>
        <CardContent class="space-y-2 text-sm">
          <div><span class="font-semibold">React 19</span> - Latest React features and hooks</div>
          <div><span class="font-semibold">Tailwind CSS v4</span> - CSS-based configuration</div>
          <div><span class="font-semibold">shadcn/ui</span> - 50+ base components</div>
          <div><span class="font-semibold">TypeScript</span> - Full type safety</div>
        </CardContent>
      </Card>

      <Card>
        <CardHeader>
          <CardTitle>State & Real-time</CardTitle>
        </CardHeader>
        <CardContent class="space-y-2 text-sm">
          <div><span class="font-semibold">Convex</span> - Real-time database queries</div>
          <div><span class="font-semibold">nanostores</span> - Lightweight state management</div>
          <div><span class="font-semibold">React Hooks</span> - useQuery, useMutation</div>
          <div><span class="font-semibold">Effect.ts</span> - Functional error handling</div>
        </CardContent>
      </Card>

      <Card>
        <CardHeader>
          <CardTitle>Accessibility & Performance</CardTitle>
        </CardHeader>
        <CardContent class="space-y-2 text-sm">
          <div><span class="font-semibold">WCAG 2.1 Level AA</span> - Full accessibility</div>
          <div><span class="font-semibold">Dark Mode</span> - Light and dark themes</div>
          <div><span class="font-semibold">Code Splitting</span> - Lazy loaded components</div>
          <div><span class="font-semibold">Optimized</span> - Minimal bundle size</div>
        </CardContent>
      </Card>

      <Card>
        <CardHeader>
          <CardTitle>Ontology Integration</CardTitle>
        </CardHeader>
        <CardContent class="space-y-2 text-sm">
          <div><span class="font-semibold">6 Dimensions</span> - Groups, People, Things, Connections, Events, Knowledge</div>
          <div><span class="font-semibold">Multi-tenant</span> - Group-scoped by default</div>
          <div><span class="font-semibold">Type-safe</span> - Mapped to ontology schema</div>
          <div><span class="font-semibold">Pattern Convergence</span> - ONE ThingCard, ONE PersonCard</div>
        </CardContent>
      </Card>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="mt-16 rounded-lg bg-gradient-to-r from-primary/10 to-primary/5 border border-primary/20 p-8 text-center">
    <h2 class="text-2xl font-bold mb-4">Ready to Build?</h2>
    <p class="text-muted-foreground mb-6 max-w-2xl mx-auto">
      Use these components to build amazing applications on the ONE Platform. Every component is production-ready, type-safe, and fully integrated with the 6-dimension ontology.
    </p>
    <div class="flex flex-col sm:flex-row gap-4 justify-center">
      <Button size="lg" asChild>
        <a href="https://github.com/one-ie/one.ie/tree/main/web/src/components/ontology-ui" target="_blank">
          View on GitHub
        </a>
      </Button>
      <Button size="lg" variant="outline" asChild>
        <a href="/docs/components/ontology-ui">
          Read Documentation
        </a>
      </Button>
    </div>
  </section>
</Layout>
