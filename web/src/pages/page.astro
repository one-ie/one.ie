    if (typeof window !== 'undefined') {
      const init = () => {
        const body = document.body;
        if (!body) return;

        // Check if we're on desktop (lg breakpoint = 1024px)
        const isDesktop = () => window.innerWidth >= 1024;

        const applyVisibility = () => {
          // Only hide/show header on desktop
          if (isDesktop()) {
            if (window.scrollY > 120) {
              body.classList.add('home-header-visible');
            } else {
              body.classList.remove('home-header-visible');
            }
          } else {
            // On mobile, always show header
            body.classList.remove('home-header-visible');
          }
        };

        // Only add hidden class on desktop
        if (isDesktop()) {
          body.classList.add('home-header-hidden');
        }

        applyVisibility();
        window.addEventListener('scroll', applyVisibility, { passive: true });

        // Handle window resize
        const handleResize = () => {
          if (isDesktop()) {
            body.classList.add('home-header-hidden');
            applyVisibility();
          } else {
            body.classList.remove('home-header-hidden', 'home-header-visible');
          }
        };
        window.addEventListener('resize', handleResize, { passive: true });

        const cleanup = () => {
          body.classList.remove('home-header-hidden', 'home-header-visible');
          window.removeEventListener('scroll', applyVisibility);
          window.removeEventListener('resize', handleResize);
          window.removeEventListener('pagehide', cleanup);
          window.removeEventListener('beforeunload', cleanup);
        };

        window.addEventListener('pagehide', cleanup);
        window.addEventListener('beforeunload', cleanup);
      };

      if (document.readyState === 'loading') {
        window.addEventListener('DOMContentLoaded', init, { once: true });
      } else {
        init();
      }
    }
