---
/**
 * Crypto Examples Index
 *
 * Directory of all crypto component examples
 */

import Layout from "@/layouts/Layout.astro";
import { Card, CardHeader, CardTitle, CardDescription, CardContent, CardFooter } from "@/components/ui/card";
import { Badge } from "@/components/ui/badge";
import { Button } from "@/components/ui/button";

const title = "Crypto Examples | ONE Platform";
const description = "Browse crypto component examples: wallets, DEX, NFTs, payments";

const examples = [
  {
    title: "Token Swap",
    description: "Simple DEX interface for swapping tokens with real-time quotes and slippage protection",
    url: "/examples/crypto/token-swap",
    icon: "üí±",
    tags: ["DEX", "Swap", "Trading"],
    components: ["TokenSwap", "WalletConnectButton"]
  },
  {
    title: "NFT Marketplace",
    description: "Browse and trade NFTs with gallery view, marketplace listings, and rarity tools",
    url: "/examples/crypto/nft-marketplace",
    icon: "üñºÔ∏è",
    tags: ["NFT", "Marketplace", "Gallery"],
    components: ["NFTGallery", "NFTMarketplace", "WalletConnectButton"]
  },
  {
    title: "Token Dashboard",
    description: "Complete wallet dashboard with balance tracking, send/receive functionality, and transaction history",
    url: "/examples/crypto/token-dashboard",
    icon: "üëõ",
    tags: ["Wallet", "Dashboard", "Payments"],
    components: ["WalletBalance", "SendToken", "ReceivePayment"]
  },
];
---

<Layout title={title} description={description}>
  <div class="container mx-auto px-4 py-12 max-w-6xl">

    <!-- Header -->
    <div class="text-center mb-12">
      <Badge variant="secondary" class="mb-4 text-lg px-4 py-2">
        üåê Crypto Examples
      </Badge>
      <h1 class="text-5xl font-bold mb-4 bg-gradient-to-r from-primary to-purple-500 bg-clip-text text-transparent">
        Crypto Component Examples
      </h1>
      <p class="text-xl text-muted-foreground max-w-2xl mx-auto">
        Explore complete examples of crypto components including wallets, DEX, NFTs, and payments.
        All examples use the Ontology-UI crypto component library.
      </p>
    </div>

    <!-- Examples Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-12">
      {examples.map((example) => (
        <Card class="group hover:shadow-lg transition-all duration-200">
          <CardHeader>
            <div class="text-5xl mb-3">{example.icon}</div>
            <CardTitle>{example.title}</CardTitle>
            <CardDescription>{example.description}</CardDescription>
          </CardHeader>
          <CardContent>
            <div class="flex flex-wrap gap-2 mb-4">
              {example.tags.map((tag) => (
                <Badge key={tag} variant="outline">{tag}</Badge>
              ))}
            </div>
            <div class="text-sm text-muted-foreground">
              <strong>Components:</strong>
              <div class="mt-1 space-y-1">
                {example.components.map((comp) => (
                  <div key={comp} class="font-mono text-xs bg-secondary px-2 py-1 rounded inline-block mr-1">
                    {comp}
                  </div>
                ))}
              </div>
            </div>
          </CardContent>
          <CardFooter>
            <Button asChild class="w-full">
              <a href={example.url}>
                View Example ‚Üí
              </a>
            </Button>
          </CardFooter>
        </Card>
      ))}
    </div>

    <!-- Component Categories -->
    <section class="mt-16">
      <h2 class="text-3xl font-bold mb-8 text-center">Available Component Categories</h2>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        <Card>
          <CardHeader>
            <CardTitle class="flex items-center gap-2">
              <span class="text-2xl">üëõ</span>
              Wallet
            </CardTitle>
          </CardHeader>
          <CardContent>
            <ul class="text-sm text-muted-foreground space-y-1">
              <li>‚Ä¢ WalletConnectButton</li>
              <li>‚Ä¢ WalletBalance</li>
              <li>‚Ä¢ WalletAddress</li>
              <li>‚Ä¢ NetworkSwitcher</li>
            </ul>
          </CardContent>
        </Card>

        <Card>
          <CardHeader>
            <CardTitle class="flex items-center gap-2">
              <span class="text-2xl">üí±</span>
              DEX
            </CardTitle>
          </CardHeader>
          <CardContent>
            <ul class="text-sm text-muted-foreground space-y-1">
              <li>‚Ä¢ TokenSwap</li>
              <li>‚Ä¢ SwapQuote</li>
              <li>‚Ä¢ SlippageSettings</li>
              <li>‚Ä¢ GasSettings</li>
            </ul>
          </CardContent>
        </Card>

        <Card>
          <CardHeader>
            <CardTitle class="flex items-center gap-2">
              <span class="text-2xl">üñºÔ∏è</span>
              NFT
            </CardTitle>
          </CardHeader>
          <CardContent>
            <ul class="text-sm text-muted-foreground space-y-1">
              <li>‚Ä¢ NFTCard</li>
              <li>‚Ä¢ NFTGallery</li>
              <li>‚Ä¢ NFTMarketplace</li>
              <li>‚Ä¢ NFTDetail</li>
            </ul>
          </CardContent>
        </Card>

        <Card>
          <CardHeader>
            <CardTitle class="flex items-center gap-2">
              <span class="text-2xl">üí∏</span>
              Payments
            </CardTitle>
          </CardHeader>
          <CardContent>
            <ul class="text-sm text-muted-foreground space-y-1">
              <li>‚Ä¢ SendToken</li>
              <li>‚Ä¢ ReceivePayment</li>
              <li>‚Ä¢ PaymentLink</li>
              <li>‚Ä¢ GasEstimator</li>
            </ul>
          </CardContent>
        </Card>
      </div>
    </section>

    <!-- Full Template -->
    <section class="mt-16">
      <Card class="bg-gradient-to-r from-primary/10 to-purple-500/10 border-primary/20">
        <CardHeader>
          <CardTitle class="text-2xl">Complete Crypto Landing Page Template</CardTitle>
          <CardDescription class="text-base">
            Ready-to-use template with all crypto features integrated
          </CardDescription>
        </CardHeader>
        <CardContent>
          <p class="mb-4">
            The crypto landing page template includes WalletConnect, TokenSwap, NFT Gallery, and payment features all in one complete page.
          </p>
          <p class="text-sm text-muted-foreground">
            <strong>Location:</strong> <code class="bg-secondary px-2 py-1 rounded">/web/src/templates/crypto-landing.astro</code>
          </p>
        </CardContent>
        <CardFooter>
          <Button asChild variant="default" size="lg">
            <a href="/templates/crypto-landing.astro" target="_blank">
              View Template Source
            </a>
          </Button>
        </CardFooter>
      </Card>
    </section>

    <!-- Documentation -->
    <section class="mt-16">
      <Card>
        <CardHeader>
          <CardTitle>Documentation</CardTitle>
          <CardDescription>
            Learn more about crypto components and integration
          </CardDescription>
        </CardHeader>
        <CardContent class="space-y-4">
          <div>
            <h3 class="font-semibold mb-2">Component Library Location</h3>
            <code class="bg-secondary px-3 py-1 rounded text-sm">
              /web/src/components/ontology-ui/crypto/
            </code>
          </div>

          <div>
            <h3 class="font-semibold mb-2">Categories</h3>
            <ul class="text-sm text-muted-foreground space-y-1">
              <li>‚Ä¢ <strong>wallet/</strong> - Wallet connection and management</li>
              <li>‚Ä¢ <strong>dex/</strong> - Decentralized exchange and token swapping</li>
              <li>‚Ä¢ <strong>nft/</strong> - NFT cards, galleries, and marketplaces</li>
              <li>‚Ä¢ <strong>payments/</strong> - Send and receive crypto payments</li>
              <li>‚Ä¢ <strong>analysis/</strong> - Token charts and analytics</li>
              <li>‚Ä¢ <strong>portfolio/</strong> - Portfolio tracking and management</li>
            </ul>
          </div>

          <div>
            <h3 class="font-semibold mb-2">Quick Start</h3>
            <pre class="bg-secondary p-4 rounded-lg overflow-x-auto text-sm"><code>{`import { WalletConnectButton } from '@/components/ontology-ui/crypto/wallet';
import { TokenSwap } from '@/components/ontology-ui/crypto/dex';
import { NFTGallery } from '@/components/ontology-ui/crypto/nft';

<WalletConnectButton client:load />
<TokenSwap chainId={1} client:load />
<NFTGallery nfts={collection} client:load />`}</code></pre>
          </div>
        </CardContent>
      </Card>
    </section>

  </div>
</Layout>
