---
import Layout from '@/layouts/Layout.astro';
import { ContactForm } from '@/components/features/ContactForm';
import { Card, CardHeader, CardTitle, CardDescription, CardContent } from '@/components/ui/card';
import { Badge } from '@/components/ui/badge';
import { Mail, MessageSquare, MapPin, Clock } from 'lucide-react';

const title = 'Contact Us';
const description = 'Get in touch with the ONE Platform team. We\'re here to help you build better websites.';
---

<Layout title={title} description={description}>
  <!-- Hero Section -->
  <section class="relative overflow-hidden px-4 py-20 sm:px-6 sm:py-24 md:px-8 md:py-32">
    <div
      class="absolute inset-0 -z-10 bg-gradient-to-b from-primary/5 via-primary/[0.02] to-background"
    >
    </div>

    <div class="mx-auto max-w-6xl">
      <div class="mb-16 space-y-4 text-center">
        <Badge
          variant="outline"
          className="mb-2 inline-flex items-center gap-2"
        >
          <MessageSquare className="h-4 w-4" />
          Get in Touch
        </Badge>

        <h1
          class="font-heading text-4xl font-extrabold leading-tight tracking-tight sm:text-5xl md:text-6xl"
        >
          Contact Us
        </h1>

        <p
          class="mx-auto max-w-2xl text-lg leading-relaxed text-muted-foreground md:text-xl"
        >
          Have questions about building websites with ONE? We're here to help.
        </p>
      </div>

      <div class="grid gap-8 lg:grid-cols-3">
        <!-- Contact Form (2 columns) -->
        <div class="lg:col-span-2">
          <Card className="border-border/50 bg-card/50 backdrop-blur">
            <CardHeader>
              <CardTitle className="text-2xl">Send us a message</CardTitle>
              <CardDescription className="text-base">
                Fill out the form below and we'll get back to you within 24 hours.
              </CardDescription>
            </CardHeader>
            <CardContent>
              <ContactForm client:load />
            </CardContent>
          </Card>
        </div>

        <!-- Contact Info (1 column) -->
        <div class="space-y-6">
          <!-- Email -->
          <Card className="border-border/50 bg-card/50 backdrop-blur">
            <CardContent className="pt-6">
              <div class="flex items-start gap-4">
                <div
                  class="flex h-12 w-12 items-center justify-center rounded-lg bg-primary/10"
                >
                  <Mail className="h-6 w-6 text-primary" />
                </div>
                <div class="flex-1">
                  <h3 class="mb-1 font-semibold">Email</h3>
                  <p class="text-sm text-muted-foreground">
                    hello@one.ie
                  </p>
                  <a
                    href="mailto:hello@one.ie"
                    class="mt-2 inline-block text-sm text-primary hover:underline"
                  >
                    Send an email â†’
                  </a>
                </div>
              </div>
            </CardContent>
          </Card>

          <!-- Location -->
          <Card className="border-border/50 bg-card/50 backdrop-blur">
            <CardContent className="pt-6">
              <div class="flex items-start gap-4">
                <div
                  class="flex h-12 w-12 items-center justify-center rounded-lg bg-primary/10"
                >
                  <MapPin className="h-6 w-6 text-primary" />
                </div>
                <div class="flex-1">
                  <h3 class="mb-1 font-semibold">Location</h3>
                  <p class="text-sm text-muted-foreground">
                    Ireland
                    <br />
                    Remote-first team
                  </p>
                </div>
              </div>
            </CardContent>
          </Card>

          <!-- Response Time -->
          <Card className="border-border/50 bg-card/50 backdrop-blur">
            <CardContent className="pt-6">
              <div class="flex items-start gap-4">
                <div
                  class="flex h-12 w-12 items-center justify-center rounded-lg bg-primary/10"
                >
                  <Clock className="h-6 w-6 text-primary" />
                </div>
                <div class="flex-1">
                  <h3 class="mb-1 font-semibold">Response Time</h3>
                  <p class="text-sm text-muted-foreground">
                    We typically respond within 24 hours during business days.
                  </p>
                </div>
              </div>
            </CardContent>
          </Card>
        </div>
      </div>

      <!-- FAQ Section -->
      <div class="mt-16 rounded-lg border border-primary/20 bg-primary/5 p-8 backdrop-blur">
        <h2 class="mb-6 text-center text-2xl font-bold">
          Frequently Asked Questions
        </h2>

        <div class="grid gap-6 md:grid-cols-2">
          <div>
            <h3 class="mb-2 font-semibold">How fast can I build a website?</h3>
            <p class="text-sm text-muted-foreground">
              With ONE's Plain English DSL, you can build and deploy a landing page in minutes. Complex sites with blogs and e-commerce take hours, not weeks.
            </p>
          </div>

          <div>
            <h3 class="mb-2 font-semibold">Is it really free?</h3>
            <p class="text-sm text-muted-foreground">
              Yes! ONE Platform is completely free on the Cloudflare and Convex free tiers. Unlimited requests, instant deployments, no credit card required.
            </p>
          </div>

          <div>
            <h3 class="mb-2 font-semibold">Do I need coding experience?</h3>
            <p class="text-sm text-muted-foreground">
              No coding required! Describe your website in Plain English and the system generates production-ready Astro pages and React components.
            </p>
          </div>

          <div>
            <h3 class="mb-2 font-semibold">What can I build?</h3>
            <p class="text-sm text-muted-foreground">
              Landing pages, blogs, documentation sites, portfolios, e-commerce stores, and more. If it's a website, you can build it with ONE.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
