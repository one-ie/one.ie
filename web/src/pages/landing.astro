<Layout title="ONE Design System">
  <!-- Hero Section -->
  <section class="relative overflow-hidden border-b px-6 py-32 md:px-8 md:py-48">
    <div class="absolute inset-0 -z-10 bg-gradient-to-br from-[hsl(var(--color-background))] via-background to-transparent"></div>
    <div class="absolute -right-32 top-24 hidden h-[520px] w-[520px] rounded-full bg-primary/10 blur-3xl md:block"></div>
    <div class="absolute -left-32 bottom-24 hidden h-[420px] w-[420px] rounded-full bg-accent/5 blur-3xl md:block"></div>

    <div class="mx-auto max-w-6xl space-y-12 text-center">
      <div class="space-y-8">
        <Badge variant="secondary" className="inline-flex items-center gap-2">
          <Sparkles className="h-4 w-4" />
          {heroData.tagline}
        </Badge>

        <h1 class="mx-auto max-w-4xl text-6xl font-bold leading-tight tracking-tight sm:text-7xl md:text-8xl">
          {heroData.headline}
        </h1>

        <p class="mx-auto max-w-3xl text-xl leading-relaxed text-muted-foreground md:text-2xl">
          {heroData.description}
        </p>

        <div class="flex flex-wrap items-center justify-center gap-4 pt-4">
          <Button size="lg" className="h-12 px-8">
            {heroData.primaryCTA.label}
            <ArrowRight className="ml-2 h-4 w-4" />
          </Button>
          <Button variant="outline" size="lg" className="h-12 px-8">
            {heroData.secondaryCTA.label}
          </Button>
        </div>
      </div>
    </div>
  </section>

  <!-- Stats Section -->
  <section class="px-6 py-16 md:px-8">
    <div class="mx-auto max-w-6xl">
      <div class="grid gap-8 md:grid-cols-3">
        {stats.map((stat) => (
          <div class="text-center">
            <p class="text-4xl font-bold text-primary md:text-5xl">{stat.value}</p>
            <p class="mt-2 text-muted-foreground">{stat.label}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Value Props Section -->
  <section class="border-y bg-muted/50 px-6 py-24 md:px-8 md:py-32">
    <div class="mx-auto max-w-6xl space-y-12">
      <div class="space-y-4 text-center">
        <h2 class="text-4xl font-bold leading-tight tracking-tight sm:text-5xl">
          Why teams choose ONE
        </h2>
        <p class="mx-auto max-w-2xl text-lg text-muted-foreground">
          Stop fighting design inconsistency. ONE gives you the tools to ship faster and scale smarter.
        </p>
      </div>

      <div class="grid gap-6 md:grid-cols-3">
        {valueProps.map((prop) => (
          <Card className="group h-full transition-all hover:shadow-lg hover:border-primary/30">
            <CardHeader className="space-y-6">
              <div class="flex items-center justify-center">
                <div class="flex h-16 w-16 items-center justify-center rounded-2xl bg-gradient-to-br from-primary/20 to-primary/10 transition-all group-hover:scale-110 group-hover:from-primary/30 group-hover:to-primary/15">
                  <prop.icon className="h-8 w-8 text-primary" />
                </div>
              </div>
              <div class="space-y-3 text-center">
                <CardTitle className="text-2xl">{prop.title}</CardTitle>
              </div>
              <CardDescription className="text-center leading-relaxed">
                {prop.description}
              </CardDescription>
            </CardHeader>
          </Card>
        ))}
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section id="features" class="px-6 py-24 md:px-8 md:py-32">
    <div class="mx-auto max-w-6xl space-y-12">
      <div class="space-y-4 text-center">
        <h2 class="text-4xl font-bold leading-tight tracking-tight sm:text-5xl">
          Powerful features built in
        </h2>
        <p class="mx-auto max-w-2xl text-lg text-muted-foreground">
          Everything you need to build accessible, consistent experiences across all your products.
        </p>
      </div>

      <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
        {features.map((feature) => (
          <Card className="flex flex-col">
            <CardHeader>
              <div class="flex items-start gap-3">
                <div class="flex h-10 w-10 items-center justify-center rounded-lg bg-primary/10 text-primary">
                  <feature.icon className="h-5 w-5" />
                </div>
                <CardTitle className="text-lg">{feature.title}</CardTitle>
              </div>
            </CardHeader>
            <CardContent>
              <p class="text-sm text-muted-foreground leading-relaxed">{feature.description}</p>
            </CardContent>
          </Card>
        ))}
      </div>
    </div>
  </section>

  <!-- How It Works Section -->
  <section class="border-y bg-muted/50 px-6 py-24 md:px-8 md:py-32">
    <div class="mx-auto max-w-6xl space-y-12">
      <div class="space-y-4 text-center">
        <h2 class="text-4xl font-bold leading-tight tracking-tight sm:text-5xl">
          How it works
        </h2>
        <p class="mx-auto max-w-2xl text-lg text-muted-foreground">
