---
import { getCollection } from "astro:content";
import {
	ArrowLeft,
	Code,
	Database,
	FileText,
	Link as LinkIcon,
	Users,
	Zap,
} from "lucide-react";
import { Badge } from "@/components/ui/badge";
import { Button } from "@/components/ui/button";
import {
	Card,
	CardContent,
	CardDescription,
	CardHeader,
	CardTitle,
} from "@/components/ui/card";
import Layout from "../../layouts/Layout.astro";

// Enable static pre-rendering for this dynamic route
export const prerender = true;

// Generate static paths
export async function getStaticPaths() {
	const connections = await getCollection("connections");
	return connections.map((connection) => ({
		params: { slug: connection.slug },
		props: { connection },
	}));
}

interface Props {
	connection: unknown;
}

const { connection } = Astro.props;
const { Content } = await connection.render();

const ontologyIcons = {
	groups: Users,
	people: Users,
	things: Database,
	connections: LinkIcon,
	events: Zap,
	knowledge: FileText,
};
---

<Layout title={`${connection.data.title} | ONE Platform`}>
  <!-- Header -->
  <section class="relative overflow-hidden px-4 py-12 sm:px-6 sm:py-16 md:px-8 md:py-20 border-b">
    <div class="mx-auto max-w-4xl">
      <a href="/connections" class="inline-flex items-center gap-2 text-primary hover:underline mb-6">
        <ArrowLeft className="h-4 w-4" />
        Back to Protocols
      </a>

      <div class="space-y-6">
        <div class="space-y-3">
          <div class="flex items-center gap-3">
            <Badge variant="secondary" className="text-lg px-3 py-1">
              {connection.data.protocol.toUpperCase()}
            </Badge>
            {connection.data.category && (
              <Badge variant="outline" className="capitalize">
                {connection.data.category}
              </Badge>
            )}
            {connection.data.specification?.status && (
              <Badge variant={connection.data.specification.status === 'stable' ? 'default' : 'secondary'}>
                {connection.data.specification.status}
              </Badge>
            )}
          </div>
          <h1 class="text-5xl font-bold leading-tight tracking-tight">
            {connection.data.title}
          </h1>
          <p class="text-xl text-muted-foreground">
            {connection.data.description}
          </p>
        </div>

        <div class="flex flex-wrap gap-3">
          {connection.data.organization && (
            <div class="inline-flex items-center gap-2 px-4 py-2 rounded-lg bg-muted/50">
              <span class="text-sm font-medium">Organization:</span>
              <span class="font-semibold">{connection.data.organization}</span>
            </div>
          )}
          {connection.data.integrationLevel && (
            <div class="inline-flex items-center gap-2 px-4 py-2 rounded-lg bg-muted/50">
              <span class="text-sm font-medium">Integration:</span>
              <Badge variant="outline" className="capitalize">
                {connection.data.integrationLevel}
              </Badge>
            </div>
          )}
        </div>
      </div>
    </div>
  </section>

  <!-- Main Content -->
  <section class="px-4 py-16 sm:px-6 sm:py-20 md:px-8 md:py-24">
    <div class="mx-auto max-w-4xl">
      <div class="prose dark:prose-invert max-w-none mb-16">
        <Content />
      </div>

      <!-- Ontology Mapping -->
      {connection.data.ontologyMapping && (
        <div class="space-y-8">
          <div>
            <h2 class="text-3xl font-bold mb-6">Ontology Mapping</h2>
            <p class="text-muted-foreground mb-6">
              How this protocol maps to the 6-dimension ontology
            </p>
            <div class="grid gap-4 md:grid-cols-2">
              {Object.entries(connection.data.ontologyMapping).map(([dimension, description]) => {
                if (!description) return null;
                const Icon = ontologyIcons[dimension as keyof typeof ontologyIcons] || FileText;
                return (
                  <Card className="border-border/50 bg-card/50">
                    <CardHeader className="space-y-3">
                      <div class="flex items-center gap-3">
                        <div class="flex h-10 w-10 items-center justify-center rounded-lg bg-primary/10">
                          <Icon className="h-5 w-5 text-primary" />
                        </div>
                        <CardTitle className="text-lg capitalize">{dimension}</CardTitle>
                      </div>
                    </CardHeader>
                    <CardContent>
                      <p class="text-sm text-muted-foreground">{description}</p>
                    </CardContent>
                  </Card>
                );
              })}
            </div>
          </div>
        </div>
      )}

      <!-- Features -->
      {connection.data.features && connection.data.features.length > 0 && (
        <div class="space-y-8 mt-16">
          <div>
            <h2 class="text-3xl font-bold mb-6">Features</h2>
            <div class="grid gap-4 md:grid-cols-2">
              {connection.data.features.map((feature: any) => (
                <Card className="border-border/50 bg-card/50">
                  <CardHeader>
                    <CardTitle className="text-lg">{feature.name}</CardTitle>
                  </CardHeader>
                  <CardContent>
                    <p class="text-sm text-muted-foreground">{feature.description}</p>
                  </CardContent>
                </Card>
              ))}
            </div>
          </div>
        </div>
      )}

      <!-- Use Cases -->
      {connection.data.useCases && connection.data.useCases.length > 0 && (
        <div class="space-y-8 mt-16">
          <div>
            <h2 class="text-3xl font-bold mb-6">Use Cases</h2>
            <div class="space-y-4">
              {connection.data.useCases.map((useCase: any) => (
                <Card className="border-border/50 bg-card/50">
                  <CardHeader>
                    <CardTitle className="text-lg">{useCase.title}</CardTitle>
                  </CardHeader>
                  <CardContent client:load className="space-y-3">
                    <p className="text-sm text-muted-foreground">{useCase.description}</p>
                    {useCase.protocols && useCase.protocols.length > 0 && (
                      <div class="flex flex-wrap gap-2">
                        {useCase.protocols.map((protocol: string) => (
                          <Badge variant="secondary" className="text-xs">
                            {protocol.toUpperCase()}
                          </Badge>
                        ))}
                      </div>
                    )}
                  </CardContent>
                </Card>
              ))}
            </div>
          </div>
        </div>
      )}

      <!-- Code Examples -->
      {connection.data.examples && connection.data.examples.length > 0 && (
        <div class="space-y-8 mt-16">
          <div>
            <h2 class="text-3xl font-bold mb-6 flex items-center gap-2">
              <Code className="h-8 w-8" />
              Code Examples
            </h2>
            <div class="space-y-6">
              {connection.data.examples.map((example: any) => (
                <Card className="border-border/50 bg-card/50">
                  <CardHeader>
                    <div class="flex items-center justify-between">
                      <CardTitle className="text-lg">{example.title}</CardTitle>
                      <Badge variant="outline" className="text-xs">
                        {example.language}
                      </Badge>
                    </div>
                  </CardHeader>
                  <CardContent>
                    <pre class="overflow-x-auto rounded-lg bg-muted/50 p-4 text-xs leading-relaxed">
                      <code>{example.code}</code>
                    </pre>
                  </CardContent>
                </Card>
              ))}
            </div>
          </div>
        </div>
      )}

      <!-- Related Info -->
      <div class="space-y-8 mt-16 pt-16 border-t">
        <div class="grid gap-6 md:grid-cols-2">
          {connection.data.standards && connection.data.standards.length > 0 && (
            <Card className="border-border/50 bg-card/50">
              <CardHeader>
                <CardTitle>Standards</CardTitle>
              </CardHeader>
              <CardContent>
                <div class="flex flex-wrap gap-2">
                  {connection.data.standards.map((standard: string) => (
                    <Badge variant="outline">{standard}</Badge>
                  ))}
                </div>
              </CardContent>
            </Card>
          )}

          {connection.data.prerequisites && connection.data.prerequisites.length > 0 && (
            <Card className="border-border/50 bg-card/50">
              <CardHeader>
                <CardTitle>Prerequisites</CardTitle>
              </CardHeader>
              <CardContent>
                <ul class="space-y-2 text-sm">
                  {connection.data.prerequisites.map((prereq: string) => (
                    <li class="flex items-start gap-2">
                      <span class="text-primary font-bold">â€¢</span>
                      <span>{prereq}</span>
                    </li>
                  ))}
                </ul>
              </CardContent>
            </Card>
          )}
        </div>
      </div>
    </div>
  </section>

  <!-- Navigation -->
  <section class="border-t bg-muted/50 px-4 py-12 sm:px-6 sm:py-16 md:px-8 md:py-20">
    <div class="mx-auto max-w-4xl flex items-center justify-between">
      <a href="/connections" class="inline-flex items-center gap-2 text-primary hover:underline">
        <ArrowLeft className="h-4 w-4" />
        Back to All Protocols
      </a>
      <a href="/connections-landing" class="inline-flex items-center gap-2 text-primary hover:underline">
        Back to Overview
        <ArrowLeft className="h-4 w-4 rotate-180" />
      </a>
    </div>
  </section>
</Layout>
