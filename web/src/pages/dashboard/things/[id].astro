---
/**
 * Thing Detail Page
 *
 * View and edit a specific entity with all properties and connections.
 * Uses Effect services for server-side rendering and client-side mutations.
 */

import { ConvexReactClient } from "convex/react";
import { Effect } from "effect";
import { ConnectionList } from "@/components/dashboard/ConnectionList";
import { EntityDetail } from "@/components/dashboard/EntityDetail";
import { EntityForm } from "@/components/dashboard/EntityForm";
import { EventHistory } from "@/components/dashboard/EventHistory";
import Layout from "@/layouts/Layout.astro";
import {
	createDataProvider,
	createDataProviderLayer,
} from "@/providers/factory";
import { ConnectionService } from "@/services/ConnectionService";
import { EventService } from "@/services/EventService";
import { ThingService } from "@/services/ThingService";

// Get entity ID from URL params
const { id } = Astro.params;

if (!id) {
	return Astro.redirect("/dashboard/things");
}

// Initialize Convex provider
const convexUrl = import.meta.env.PUBLIC_CONVEX_URL;
if (!convexUrl) {
	throw new Error("PUBLIC_CONVEX_URL environment variable is not set");
}
const convexClient = new ConvexReactClient(convexUrl);
const provider = createDataProvider({
	type: "convex",
	client: convexClient,
});
const providerLayer = createDataProviderLayer(provider);

// Server-side data fetching using Effect
const program = Effect.gen(function* () {
	// Get entity with relationships
	const thing = yield* ThingService.getWithRelationships(id);

	// Get entity history
	const history = yield* EventService.list({
		targetId: id,
		limit: 20,
	});

	return {
		thing,
		history,
	};
});

// Run Effect program with DataProvider layer
const result = await Effect.runPromise(
	program.pipe(
		Effect.provide(providerLayer),
		Effect.catchTag("ThingNotFoundError", (error) => {
			return Effect.succeed({ notFound: true, message: error.message });
		}),
		Effect.catchAll((error) => {
			console.error("Entity detail fetch failed:", error);
			return Effect.succeed({ notFound: true, message: "Entity not found" });
		}),
	),
);

// Handle not found
if ("notFound" in result && result.notFound) {
	return Astro.redirect("/dashboard/things");
}

const { thing, history } = result as {
	thing: {
		_id: string;
		type: string;
		name: string;
		status: string;
		properties: any;
		relationships: {
			outgoing: any[];
			incoming: any[];
		};
	};
	history: any[];
};
---

<Layout title={`${thing.name} - Entity Detail`}>
  <div class="min-h-screen bg-gray-50 dark:bg-gray-900">
    <!-- Header -->
    <header class="bg-white dark:bg-gray-800 shadow">
      <div class="mx-auto max-w-7xl px-4 py-6 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between">
          <div class="flex items-center gap-4">
            <a
              href="/dashboard/things"
              class="text-gray-500 hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-200"
            >
              ‚Üê Back
            </a>
            <div>
              <div class="flex items-center gap-2">
                <h1 class="text-3xl font-bold text-gray-900 dark:text-white">
                  {thing.name}
                </h1>
                <span class="inline-flex items-center rounded-full bg-blue-100 dark:bg-blue-900 px-2.5 py-0.5 text-xs font-medium text-blue-800 dark:text-blue-200">
                  {thing.type}
                </span>
                <span class={`inline-flex items-center rounded-full px-2.5 py-0.5 text-xs font-medium ${
                  thing.status === 'published' ? 'bg-green-100 dark:bg-green-900 text-green-800 dark:text-green-200' :
                  thing.status === 'active' ? 'bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-200' :
                  thing.status === 'draft' ? 'bg-gray-100 dark:bg-gray-700 text-gray-800 dark:text-gray-200' :
                  'bg-red-100 dark:bg-red-900 text-red-800 dark:text-red-200'
                }`}>
                  {thing.status}
                </span>
              </div>
              <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">
                ID: {thing._id}
              </p>
            </div>
          </div>
          <div class="flex gap-2">
            <button
              onclick="document.getElementById('edit-form')?.scrollIntoView({ behavior: 'smooth' })"
              class="inline-flex items-center rounded-md bg-white dark:bg-gray-700 px-4 py-2 text-sm font-medium text-gray-700 dark:text-gray-200 shadow-sm hover:bg-gray-50 dark:hover:bg-gray-600"
            >
              Edit
            </button>
            <button
              id="delete-button"
              class="inline-flex items-center rounded-md bg-red-600 px-4 py-2 text-sm font-medium text-white shadow-sm hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2"
            >
              Delete
            </button>
          </div>
        </div>
      </div>
    </header>

    <!-- Main Content -->
    <main class="mx-auto max-w-7xl px-4 py-8 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 gap-8 lg:grid-cols-3">
        <!-- Left Column: Entity Details -->
        <div class="lg:col-span-2 space-y-8">
          <!-- Entity Properties -->
          <div class="bg-white dark:bg-gray-800 shadow sm:rounded-lg">
            <div class="px-4 py-5 sm:p-6">
              <h3 class="text-lg font-medium leading-6 text-gray-900 dark:text-white">
                Properties
              </h3>
              <div class="mt-4">
                <EntityDetail client:visible entity={thing} />
              </div>
            </div>
          </div>

          <!-- Edit Form -->
          <div id="edit-form" class="bg-white dark:bg-gray-800 shadow sm:rounded-lg">
            <div class="px-4 py-5 sm:p-6">
              <h3 class="text-lg font-medium leading-6 text-gray-900 dark:text-white">
                Edit Entity
              </h3>
              <div class="mt-4">
                <EntityForm client:load entity={thing} />
              </div>
            </div>
          </div>

          <!-- Connections -->
          <div class="bg-white dark:bg-gray-800 shadow sm:rounded-lg">
            <div class="px-4 py-5 sm:p-6">
              <h3 class="text-lg font-medium leading-6 text-gray-900 dark:text-white mb-4">
                Connections
              </h3>
              <ConnectionList
                client:visible
                entityId={thing._id}
                outgoing={thing.relationships.outgoing}
                incoming={thing.relationships.incoming}
              />
            </div>
          </div>
        </div>

        <!-- Right Column: History -->
        <div class="lg:col-span-1">
          <div class="bg-white dark:bg-gray-800 shadow sm:rounded-lg sticky top-4">
            <div class="px-4 py-5 sm:p-6">
              <h3 class="text-lg font-medium leading-6 text-gray-900 dark:text-white mb-4">
                Activity History
              </h3>
              <EventHistory client:visible events={history} />
            </div>
          </div>
        </div>
      </div>
    </main>
  </div>

  <script>
    // Handle delete button click
    document.getElementById('delete-button')?.addEventListener('click', async () => {
      if (!confirm('Are you sure you want to delete this entity? This action cannot be undone.')) {
        return;
      }

      try {
        // TODO: Implement delete via Effect service
        alert('Delete functionality not yet implemented');
      } catch (error) {
        console.error('Delete failed:', error);
        alert('Failed to delete entity');
      }
    });
  </script>
</Layout>
