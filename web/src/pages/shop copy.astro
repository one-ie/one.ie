import Layout from '@/layouts/Layout.astro';
import { getCollection } from 'astro:content';
import { ProductCard } from '@/components/ecommerce/interactive/ProductCard';
import { CategoryCard } from '@/components/ecommerce/static/CategoryCard';
import { ProductGrid } from '@/components/ecommerce/static/ProductGrid';
import { Button } from '@/components/ui/button';
import { Badge } from '@/components/ui/badge';
import { CountdownTimer } from '@/components/ecommerce/interactive/CountdownTimer';
import { SocialProofNotification } from '@/components/ecommerce/interactive/SocialProofNotification';

// Get all products from content collection
const allProducts = await getCollection('products');

// Transform product helper function
const transformProduct = (p: any) => ({
  id: p.id,
  slug: p.slug,
  name: p.data.name,
  description: p.data.description,
  price: p.data.price,
  compareAtPrice: p.data.compareAtPrice,
  images: p.data.images,
  thumbnail: p.data.images[0],
  category: p.data.category,
  tags: p.data.tags || [],
  inStock: p.data.inStock,
  inventory: p.data.variants?.reduce((sum: number, v: any) => sum + (v.inStock ? 1 : 0), 0) || 0,
  rating: 4.5,
  reviewCount: 0,
  featured: p.data.featured,
  createdAt: new Date(),
  updatedAt: new Date(),
});

// Get all collections from content
const allCollections = await getCollection('collections');

// Get collection-specific products
const newArrivalsCollection = allCollections.find(c => c.slug === 'new-arrivals');
const newArrivalsProducts = newArrivalsCollection?.data.products
  ?.map((slug: string) => allProducts.find(p => p.slug === slug))
  .filter(Boolean)
  .slice(0, 4)
  .map(transformProduct) || [];

const bestSellersCollection = allCollections.find(c => c.slug === 'bestsellers');
const bestSellersProducts = bestSellersCollection?.data.products
  ?.map((slug: string) => allProducts.find(p => p.slug === slug))
  .filter(Boolean)
  .slice(0, 4)
  .map(transformProduct) || [];

const saleCollection = allCollections.find(c => c.slug === 'sale');
const saleProducts = saleCollection?.data.products
  ?.map((slug: string) => allProducts.find(p => p.slug === slug))
  .filter(Boolean)
  .slice(0, 4)
  .map(transformProduct) || [];

// Get category collections (filter out special collections)
const categoryCollections = allCollections
  .filter(c => !['new-arrivals', 'bestsellers', 'sale'].includes(c.slug))
  .map(collection => ({
    id: collection.id,
    slug: collection.slug,
    name: collection.data.name,
    description: collection.data.description,
    image: collection.data.image || '/placeholder.jpg',
    productCount: collection.data.products?.length || 0,
    products: collection.data.products
      ?.map((slug: string) => allProducts.find(p => p.slug === slug))
      .filter(Boolean)
      .slice(0, 3)
      .map(transformProduct) || []
  }));
