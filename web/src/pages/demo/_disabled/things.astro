                <li>‚Ä¢ Sessions and notifications</li>
              </ul>
            </div>
            <div class="bg-red-50 border-l-4 border-red-600 p-4">
              <h3 class="font-semibold text-red-900 mb-2 flex items-center gap-2">
                "<AlertCircle className=""w-5 h-5" />
                Not Things:
              </h3>
              <ul class="text-red-800 space-y-1 text-sm">
                <li>‚Ä¢ Relationships ‚Üí Connections</li>
                <li>‚Ä¢ Actions ‚Üí Events</li>
                <li>‚Ä¢ Categories ‚Üí Knowledge/Labels</li>
                <li>‚Ä¢ Groups ‚Üí Groups dimension</li>
                <li>‚Ä¢ Abstract concepts</li>
              </ul>
            </div>
          </div>
        </div>
      </div>

      <!-- Entity Types Showcase -->
      <div class="mb-12">
        <h2 class="text-2xl font-bold text-slate-900 mb-8">66+ Entity Types</h2>
        <div class="space-y-8">
          {entityCategories.map((cat) => (
            <div class="bg-white rounded-lg shadow-lg overflow-hidden">
              <div class={`bg-gradient-to-r from-${cat.color}-50 to-${cat.color}-100 px-6 py-4 border-l-4 border-${cat.color}-600`}>
                <h3 class="text-xl font-bold text-slate-900 flex items-center gap-2">
                  <span class="text-3xl">{cat.emoji}</span>
                  {cat.category}
                </h3>
              </div>
              <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 p-6">
                {cat.types.map((item) => (
                  <div class="border rounded-lg p-4 hover:shadow-md transition">
                    <div class="font-mono text-sm font-bold text-blue-600 mb-1">{item.type}</div>
                    <p class="text-sm text-slate-700 mb-2">{item.description}</p>
                    <p class="text-xs text-slate-500 italic">e.g. {item.examples}</p>
                  </div>
                ))}
              </div>
            </div>
          ))}
        </div>
      </div>

      <!-- Status Lifecycle -->
      <div class="mb-12 bg-white rounded-lg shadow-lg p-8">
        <h2 class="text-2xl font-bold text-slate-900 mb-6">Status Lifecycle</h2>
        <p class="text-slate-600 mb-6">Every thing has a status that tracks its lifecycle in the system.</p>
        <div class="flex items-center gap-3 flex-wrap">
          <div class="flex-1 min-w-[150px] text-center p-4 bg-yellow-50 rounded-lg border-2 border-yellow-600">
            <div class="text-sm font-mono font-bold text-yellow-700 mb-1">draft</div>
            <p class="text-xs text-yellow-600">Initial creation</p>
          </div>
          <div class="text-slate-400">"<ChevronRight className=""w-6 h-6" /></div>
          <div class="flex-1 min-w-[150px] text-center p-4 bg-blue-50 rounded-lg border-2 border-blue-600">
            <div class="text-sm font-mono font-bold text-blue-700 mb-1">active</div>
            <p class="text-xs text-blue-600">In use</p>
          </div>
          <div class="text-slate-400">"<ChevronRight className=""w-6 h-6" /></div>
          <div class="flex-1 min-w-[150px] text-center p-4 bg-green-50 rounded-lg border-2 border-green-600">
            <div class="text-sm font-mono font-bold text-green-700 mb-1">published</div>
            <p class="text-xs text-green-600">Visible</p>
          </div>
          <div class="text-slate-400">"<ChevronRight className=""w-6 h-6" /></div>
          <div class="flex-1 min-w-[150px] text-center p-4 bg-gray-50 rounded-lg border-2 border-gray-600">
            <div class="text-sm font-mono font-bold text-gray-700 mb-1">archived</div>
            <p class="text-xs text-gray-600">Historical</p>
          </div>
        </div>
      </div>

      <!-- TypeScript Types -->
      <div class="mb-12 bg-slate-900 rounded-lg shadow-lg overflow-hidden">
        <div class="bg-slate-800 px-6 py-4 border-l-4 border-blue-600">
          <h3 class="text-xl font-bold text-white flex items-center gap-2">
            "<FileJson className=""w-5 h-5" />
            TypeScript Types
          </h3>
        </div>
        <div class="p-6 overflow-x-auto">
          <pre class="text-sm text-slate-200"><code>{`interface Thing {
  _id: Id<'entities'>;
  type: string;                    // 66+ entity types
  name: string;                    // Display name
  properties: Record<string, any>; // Type-specific properties
  status: 'draft' | 'active' | 'published' | 'archived';
  createdAt: number;
  updatedAt: number;
  deletedAt?: number;
}

// Examples:
const creator: Thing = {
  type: 'creator',
  name: 'Anthony',
  properties: {
    email: 'anthony@one.ie',
    username: 'anthony',
    niche: ['AI', 'Tech', 'Entrepreneurship'],
    totalFollowers: 50000,
    role: 'platform_owner'
  }
};

const course: Thing = {
  type: 'course',
  name: 'Building AI Products',
  properties: {
    description: 'Learn to build AI products',
    duration: '12 weeks',
    price: 9900, // cents
    studentCount: 1200
  }
};

const token: Thing = {
  type: 'token',
  name: 'ACME Token',
  properties: {
    contractAddress: '0x...',
    blockchain: 'base',
    totalSupply: 1000000,
    price: 0.25 // USD
  }
};`}</code></pre>
        </div>
      </div>

      <!-- React Hook Examples -->
      <div class="mb-12 bg-white rounded-lg shadow-lg overflow-hidden">
        <div class="bg-gradient-to-r from-purple-600 to-pink-600 px-6 py-4">
          <h3 class="text-xl font-bold text-white flex items-center gap-2">
            "<Zap className=""w-5 h-5" />
            React Hook Examples
          </h3>
        </div>
        <div class="p-6 space-y-6">
          <div>
            <h4 class="font-semibold text-slate-900 mb-3">List all things of a type</h4>
            <div class="bg-slate-900 rounded p-4 overflow-x-auto">
              <pre class="text-sm text-slate-200"><code>{`import { useThings } from '@/hooks/useThings';

export function CourseList() {
  const courses = useThings({ type: 'course', limit: 10 });

  if (courses === undefined) return <div>Loading...</div>;

  return (
    <div class="grid grid-cols-3 gap-4">
      {courses.map(course => (
        <div key={course._id}>
          <h2>{course.name}</h2>
          <p>{course.properties.description}</p>
          <span class="text-sm text-slate-600">
            {course.properties.studentCount} students
          </span>
        </div>
      ))}
    </div>
  );
}`}</code></pre>
            </div>
          </div>

          <div>
            <h4 class="font-semibold text-slate-900 mb-3">Get a single thing by ID</h4>
            <div class="bg-slate-900 rounded p-4 overflow-x-auto">
              <pre class="text-sm text-slate-200"><code>{`import { useThing } from '@/hooks/useThing';

export function CourseDetail({ courseId }: { courseId: Id<'entities'> }) {
  const course = useThing(courseId);

  if (course === undefined) return <div>Loading...</div>;
  if (course === null) return <div>Not found</div>;

  return (
    <div>
      <h1>{course.name}</h1>
      <p>{course.properties.description}</p>
      <button onClick={() => enrollCourse(courseId)}>
        Enroll Now
      </button>
    </div>
  );
}`}</code></pre>
            </div>
          </div>

          <div>
            <h4 class="font-semibold text-slate-900 mb-3">Search things by name</h4>
            <div class="bg-slate-900 rounded p-4 overflow-x-auto">
              <pre class="text-sm text-slate-200"><code>{`import { useThingSearch } from '@/hooks/useThingSearch';

export function ThingSearch() {
  const [query, setQuery] = useState('');
  const results = useThingSearch(query);

  return (
    <div>
      <input
        type="text"
        value={query}
        onChange={(e) => setQuery(e.target.value)}
        placeholder="Search things..."
      />
      {results && results.map(thing => (
        <div key={thing._id} class="p-4 border rounded">
          <strong>{thing.name}</strong>
          <p class="text-sm text-slate-600">{thing.type}</p>
        </div>
      ))}
    </div>
  );
}`}</code></pre>
            </div>
          </div>

          <div>
            <h4 class="font-semibold text-slate-900 mb-3">Create a thing</h4>
            <div class="bg-slate-900 rounded p-4 overflow-x-auto">
              <pre class="text-sm text-slate-200"><code>{`import { useCreateThing } from '@/hooks/useCreateThing';

export function CreateCourseForm() {
  const createThing = useCreateThing();
  const [isLoading, setIsLoading] = useState(false);

  const handleCreate = async (data: any) => {
    setIsLoading(true);
    try {
      const thingId = await createThing({
