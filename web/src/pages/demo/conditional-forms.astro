---
/**
 * Conditional Forms Demo
 *
 * Demonstrates the form conditional logic system with:
 * - Visual rule builder
 * - Real-time preview
 * - Multiple operators and actions
 * - Multi-step forms with conditional navigation
 */

import Layout from '@/layouts/Layout.astro';
import { ConditionalFormDemo } from '@/components/forms/ConditionalFormDemo';

const title = 'Conditional Forms Demo';
const description = 'Build forms with dynamic conditional logic';
---

<Layout title={title} description={description}>
  <div class="container mx-auto py-8 px-4 max-w-6xl">
    <div class="mb-8">
      <h1 class="text-4xl font-bold mb-2">Conditional Forms</h1>
      <p class="text-muted-foreground text-lg">
        Create intelligent forms that adapt based on user input
      </p>
    </div>

    <ConditionalFormDemo client:load />
  </div>
</Layout>
