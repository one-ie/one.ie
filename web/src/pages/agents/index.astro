---
/**
 * Agents Index (PREMIUM TIER)
 *
 * Manage AI agents - requires backend
 */
import { backendConfig } from '@/config/backend';
import Layout from '@/layouts/Layout.astro';

if (!backendConfig.enabled) {
  return Astro.redirect('/upgrade?feature=agent-management');
}
---

<Layout title="AI Agents">
  <div class="container mx-auto max-w-6xl py-8">
    <div class="mb-4 flex items-center justify-between">
      <h1 class="text-3xl font-bold">AI Agents</h1>
      <span class="rounded-full bg-gradient-to-r from-blue-500 to-purple-600 px-3 py-1 text-xs font-medium text-white">
        Premium
      </span>
    </div>

    <p class="mb-8 text-gray-600">
      Manage your AI agents and configure their capabilities.
    </p>

    <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
      <!-- Agent cards will be rendered here -->
    </div>
  </div>
</Layout>
