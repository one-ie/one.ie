---
import Layout from '../layouts/Layout.astro';
import { readFileSync } from 'fs';
import { resolve } from 'path';
import { marked } from 'marked';

// Read LICENSE.md content at build time
const licenseMarkdown = readFileSync(resolve('..', 'LICENSE.md'), 'utf-8');
const licenseContent = await marked.parse(licenseMarkdown);
---

<Layout title="FREE License" description="ONE Platform License - Free Forever">
  <div class="container mx-auto px-4 py-8 max-w-[800px]">
    <div class="prose dark:prose-invert max-w-none">
      <article set:html={licenseContent} />
    </div>
  </div>
</Layout>
