---
/**
 * Agent Detail Page - CYCLE-047
 * Comprehensive dashboard for managing deployed AI agents
 */
import Layout from '@/layouts/Layout.astro';
import { AgentDashboard } from '@/components/agent/AgentDashboard';

const { agentId } = Astro.params;

if (!agentId) {
  return Astro.redirect('/launchpad');
}

const title = `Agent - ${agentId}`;
const description = 'Monitor and control your AI agent\'s activity, performance, and configuration.';
---

<Layout title={title} description={description}>
  <div class="container mx-auto max-w-7xl py-8 px-4">
    <!-- Navigation -->
    <div class="mb-6">
      <a href="/launchpad" class="text-sm text-primary hover:underline">
        ‚Üê Back to Launchpad
      </a>
    </div>

    <!-- Agent Dashboard -->
    <AgentDashboard agentId={agentId} client:load />
  </div>
</Layout>
