---
import Layout from "@/layouts/Layout.astro";
import { SignUpOnboarding } from "@/components/onboarding/SignUpOnboarding";

// CRITICAL: Prerender to reduce worker bundle
export const prerender = true;

// Redirect if already logged in
if (Astro.locals.user) {
  return Astro.redirect("/dashboard");
}
---

<Layout title="Create Account - Wave 1 Onboarding">
  <main class="min-h-screen flex items-center justify-center bg-gradient-to-br from-background to-secondary/10">
    <SignUpOnboarding client:load />
  </main>
</Layout>
