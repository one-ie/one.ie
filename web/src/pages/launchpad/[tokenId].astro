---
import Layout from '@/layouts/Layout.astro';
import { TokenDashboard } from '@/components/launchpad/TokenDashboard';

const { tokenId } = Astro.params;

const title = 'Token Dashboard | Solana Launchpad';
const description = 'View token analytics and manage your SPL token';
---

<Layout title={title} description={description}>
  <div class="container mx-auto py-8 px-4">
    <div class="max-w-7xl mx-auto">
      <!-- Header -->
      <div class="mb-8">
        <a
          href="/launchpad"
          class="inline-flex items-center text-sm text-muted-foreground hover:text-foreground mb-4"
        >
          <svg
            class="w-4 h-4 mr-1"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M15 19l-7-7 7-7"
            ></path>
          </svg>
          Back to Launchpad
        </a>
      </div>

      <!-- Dashboard -->
      {tokenId ? (
        <TokenDashboard tokenId={tokenId} client:load />
      ) : (
        <div class="text-center py-12">
          <p class="text-muted-foreground">Token not found</p>
        </div>
      )}
    </div>
  </div>
</Layout>
