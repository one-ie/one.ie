---
import { getCollection } from "astro:content";
import Layout from "../layouts/Layout.astro";

// Get all doc entries for grid display
const docEntries = await getCollection("docs");
---

<Layout title="Server Started - ONE Platform">
  <div class="min-h-screen bg-background flex flex-col items-center p-4">

    <!-- Header Section -->
    <div class="max-w-2xl w-full space-y-8 py-16">
      <div class="text-center space-y-6">
        <!-- Success Icon -->
        <div class="inline-flex items-center justify-center">
          <div class="bg-green-500 rounded-full p-4">
            <svg class="w-12 h-12 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
          </div>
        </div>

        <!-- Main Message -->
        <div class="space-y-3">
          <h1 class="text-5xl font-bold text-foreground">
            Your Server Has Started
          </h1>
          <p class="text-xl text-muted-foreground">
            Welcome to the ONE Platform. Your development environment is ready.
          </p>
        </div>

        <!-- Server Link -->
        <div class="bg-card rounded-lg border-2 border-primary p-6 space-y-4">
          <p class="text-sm font-medium text-muted-foreground">Visit your server:</p>
          <div class="flex items-center gap-3 bg-muted p-4 rounded-lg">
            <svg class="w-5 h-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.658 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"></path>
            </svg>
            <a href="http://localhost:4321" class="text-lg font-mono text-green-500 hover:underline font-semibold">
              http://localhost:4321
            </a>
          </div>

          <!-- Home Button -->
          <a href="/" class="block">
            <button class="w-full bg-primary hover:opacity-90 text-primary-foreground font-semibold py-3 px-6 rounded-lg transition-opacity">
              Go to Home
            </button>
          </a>
        </div>
      </div>
    </div>

    <!-- Docs Grid Section -->
    <div class="max-w-6xl w-full space-y-8 pb-16">
      <div class="text-center">
        <h2 class="text-3xl font-bold text-foreground mb-2">Documentation</h2>
        <p class="text-muted-foreground">Explore guides and references</p>
      </div>

      <!-- Docs Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        {docEntries.map((doc) => (
          <a href={`/docs/${doc.slug}`} class="block h-full">
            <div class="h-full bg-background rounded-lg border border-border p-6 hover:shadow-lg hover:border-primary transition-all cursor-pointer">
              <div class="space-y-3">
                <div class="flex items-start justify-between">
                  <h3 class="font-semibold text-font text-lg flex-1">
                    {doc.data.title}
                  </h3>
                  <svg class="w-5 h-5 text-muted-foreground flex-shrink-0 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                  </svg>
                </div>

                {doc.data.description && (
                  <p class="text-sm text-muted-foreground">
                    {doc.data.description}
                  </p>
                )}

                <div class="flex flex-wrap gap-2 pt-2">
                  {doc.data.tags?.map((tag: string) => (
                    <span key={tag} class="inline-block px-2 py-1 text-xs font-medium bg-secondary text-secondary-foreground rounded">
                      {tag}
                    </span>
                  ))}
                </div>
              </div>
            </div>
          </a>
        ))}
      </div>

      <!-- Empty State -->
      {docEntries.length === 0 && (
        <div class="text-center py-12 bg-muted rounded-lg border-2 border-dashed border-border">
          <svg class="w-12 h-12 text-muted-foreground mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
          </svg>
          <p class="text-muted-foreground text-lg">No documentation available yet</p>
          <p class="text-sm text-muted-foreground mt-1">Add docs to get started</p>
        </div>
      )}
    </div>
  </div>
</Layout>
