---
/**
 * Unified AI Chat Page
 *
 * One chat app for all users:
 * - Free tier: Works without API keys (Gemini Flash Lite only)
 * - Premium: Users add their own OpenRouter keys for full model access
 * - Smart UI: Show/hide features based on user API key status
 *
 * Features scale with backend capabilities:
 * - Reasoning visualization (when available)
 * - Tool call display (when available)
 * - Generative UI components (when available)
 */

import Layout from '@/layouts/Layout.astro';
import { ChatClient } from '@/components/ai/ChatClient';

const title = 'AI Chat';
const description = 'Free AI chat with all features. Reasoning, tool calls, generative UI included.';
---

<Layout
  title={title}
  description={description}
  sidebarInitialCollapsed={true}
  hideHeader={true}
  fullHeight={true}
>
  <ChatClient client:only="react" />
</Layout>
