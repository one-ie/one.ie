---
/**
 * Chat Demo Page with Sidebar Navigation
 *
 * CYCLES 51-60: Discord/WhatsApp-like sidebar with 7 sections
 *
 * Features:
 * - Stream (activity feed)
 * - Organisations (org switching)
 * - Groups (team structure)
 * - Channels (public/private/DM)
 * - Tools (integrations)
 * - Agents (AI assistants)
 * - People (team members)
 */

import Layout from '@/layouts/Layout.astro';
import { ChatContainer } from '@/components/chat/ChatContainer';

const title = 'Chat with Sidebar';
const description = 'Discord/WhatsApp-style chat interface with 7-section sidebar';
---

<Layout
  title={title}
  description={description}
  sidebarInitialCollapsed={true}
>
  <div class="h-screen w-full">
    <ChatContainer client:only="react" channelId="general" />
  </div>
</Layout>

<style>
  /* Full screen layout without default padding */
  :global(main) {
    padding: 0 !important;
    max-width: 100% !important;
  }
</style>
