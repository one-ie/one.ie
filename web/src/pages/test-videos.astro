---
// Test page to verify videos collection is working
import { getCollection } from 'astro:content';
import Layout from '@/layouts/Layout.astro';

const videos = await getCollection('videos');
const videoCount = videos.length;
---

<Layout title="Video Collection Test">
  <div class="container mx-auto py-8 px-4">
    <h1 class="text-3xl font-bold mb-6">Video Collection Test</h1>

    <div class="mb-4 p-4 bg-green-100 dark:bg-green-900 rounded-lg">
      <p class="text-lg">âœ… Videos collection loaded successfully!</p>
      <p class="mt-2">Found {videoCount} video(s)</p>
    </div>

    <div class="space-y-6">
      {videos.map(video => (
        <div class="p-6 border rounded-lg shadow-sm">
          <h2 class="text-2xl font-semibold mb-2">{video.data.title}</h2>
          <p class="text-gray-600 dark:text-gray-400 mb-4">{video.data.description}</p>

          <div class="grid grid-cols-2 gap-4 text-sm">
            <div>
              <strong>Author:</strong> {video.data.author || 'N/A'}
            </div>
            <div>
              <strong>Duration:</strong> {Math.floor(video.data.duration / 60)}:{(video.data.duration % 60).toString().padStart(2, '0')}
            </div>
            <div>
              <strong>Published:</strong> {video.data.publishedAt.toLocaleDateString()}
            </div>
            <div>
              <strong>YouTube ID:</strong> {video.data.youtubeId || 'N/A'}
            </div>
          </div>

          {video.data.categories.length > 0 && (
            <div class="mt-4">
              <strong class="text-sm">Categories:</strong>
              <div class="flex gap-2 mt-2">
                {video.data.categories.map(cat => (
                  <span class="px-3 py-1 bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-200 rounded-full text-sm">
                    {cat}
                  </span>
                ))}
              </div>
            </div>
          )}

          {video.data.tags.length > 0 && (
            <div class="mt-4">
              <strong class="text-sm">Tags:</strong>
              <div class="flex gap-2 mt-2 flex-wrap">
                {video.data.tags.map(tag => (
                  <span class="px-2 py-1 bg-gray-200 dark:bg-gray-700 text-gray-700 dark:text-gray-300 rounded text-xs">
                    {tag}
                  </span>
                ))}
              </div>
            </div>
          )}
        </div>
      ))}
    </div>
  </div>
</Layout>
