export const prerender = true;

<Layout
  title="Credits — ONE"
  description="A heartfelt thank you to the builders, educators, and communities whose work powers ONE."
>
  <!-- Hero Section -->
  <section class="border-y bg-muted/50 px-4 py-20 sm:px-6 sm:py-24 md:px-8 md:py-32">
    <div class="mx-auto max-w-5xl text-center">
      <div
        class="rounded-md border px-2.5 py-0.5 text-xs font-semibold transition-colors focus:outline-none focus:ring-2 focus:ring-ring focus:ring-offset-2 text-foreground mb-2 inline-flex items-center gap-2"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="lucide lucide-heart h-4 w-4"
          aria-hidden="true"
        >
          <path d="M19 14c1.49-1.46 3-3.21 3-5.5A5.5 5.5 0 0 0 16.5 3c-1.76 0-3 .5-4.5 2-1.5-1.5-2.74-2-4.5-2A5.5 5.5 0 0 0 2 8.5c0 2.3 1.5 4.05 3 5.5l7 7Z" />
        </svg>
        With Deep Gratitude
      </div>
      <h1 class="mt-6 text-4xl md:text-5xl font-bold leading-tight tracking-tight">
        ONE is possible because of generous builders who share their craft.
      </h1>
      <p class="mt-6 text-base md:text-lg text-muted-foreground max-w-3xl mx-auto leading-relaxed">
        Open source is a relay race. These people and teams shipped the tools and practices we depend on.
        Every reference here maps back to entries in <code class="text-foreground">web/package.json</code> or the playbooks we use to ship them.
      </p>
    </div>
  </section>

  <!-- Credits Section -->
  <section class="bg-background px-4 py-20 sm:px-6 sm:py-24 md:px-8 md:py-32">
    <div class="mx-auto max-w-6xl">
      <div class="grid gap-12">
        {creditGroups.map((group) => (
          <article class="p-6 md:p-10">
            <header class="mb-8">
              <h2 class="text-2xl font-semibold tracking-tight">{group.category}</h2>
              <p class="mt-3 text-base text-muted-foreground leading-relaxed">{group.summary}</p>
            </header>

            <div class="grid gap-6 md:grid-cols-2">
              {group.people.map((person) => (
                <div class="rounded-xl border text-card-foreground shadow border-border/50 bg-card/50 backdrop-blur p-6 space-y-4">
                  <div>
                    <div class="font-semibold tracking-tight text-lg">{person.name}</div>
                    <div class="text-sm text-muted-foreground">{person.title}</div>
                  </div>
                  <p class="text-sm text-muted-foreground leading-relaxed">{person.message}</p>
                  <div class="flex flex-wrap gap-2">
                    {person.links.map((link) => (
                      <a
                        rel="noopener noreferrer"
                        target="_blank"
                        href={link.url}
                        class="inline-flex items-center rounded-md border px-2.5 py-0.5 font-semibold transition-colors focus:outline-none focus:ring-2 focus:ring-ring focus:ring-offset-2 border-transparent bg-secondary text-secondary-foreground hover:bg-secondary/80 text-xs"
                      >
                        {link.label}
                      </a>
                    ))}
                  </div>
                </div>
              ))}
            </div>
          </article>
        ))}
      </div>

      <div class="mt-16 rounded-lg border border-primary/20 bg-primary/5 p-8 md:p-12 backdrop-blur text-center">
        <h3 class="text-2xl font-bold">Want to support them too?</h3>
        <p class="mt-4 text-lg text-muted-foreground">
          Star their repositories, sponsor their work, and share their stories. ONE will keep paying
          it forward—if we missed you, please reach out so we can add your name here.
        </p>
        <a
          class="mt-6 inline-flex items-center justify-center gap-2 whitespace-nowrap text-sm font-medium transition-all disabled:pointer-events-none disabled:opacity-50 [&_svg]:pointer-events-none [&_svg:not([class*='size-'])]:size-4 shrink-0 [&_svg]:shrink-0 outline-none focus-visible:border-ring focus-visible:ring-ring/50 focus-visible:ring-[3px] bg-primary text-primary-foreground shadow-sm hover:bg-primary/90 h-10 rounded-md px-6"
          href="mailto:hello@one.ie?subject=ONE%20Credits"
        >
          Say Hi
        </a>
      </div>
    </div>
  </section>
</Layout>
