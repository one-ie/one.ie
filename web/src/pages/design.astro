            <p class="text-sm text-muted-foreground">
              Cards use background/foreground. Buttons use primary/secondary/tertiary.
            </p>
          </div>

          <!-- Example Card with Buttons -->
          <Card className="border-primary/20">
            <CardHeader>
              <div class="flex items-center justify-between">
                <CardTitle className="text-lg">Product Thing</CardTitle>
                <Badge variant="outline" className="text-xs">product</Badge>
              </div>
              <CardDescription className="text-sm">
                Card uses <code class="text-xs">background</code> (gray) with <code class="text-xs">foreground</code> (white) content area
              </CardDescription>
            </CardHeader>
            <CardContent className="space-y-4">
              <!-- Foreground Content Area -->
              <div class="rounded-lg bg-background p-3 ring-1 ring-border">
                <p class="text-xs font-medium">Content Area</p>
                <p class="text-xs text-muted-foreground">This uses foreground color (white)</p>
              </div>

              <!-- Price -->
              <div class="text-2xl font-bold">$299</div>

              <!-- Buttons Demo -->
              <div class="space-y-3">
                <Button className="w-full rounded-md bg-[hsl(216_55%_25%)] text-white shadow-lg hover:bg-[hsl(216_55%_20%)] hover:shadow-xl active:shadow-md transition-all cursor-pointer font-semibold py-6">
                  Primary Button
                </Button>
                <Button className="w-full rounded-md bg-[hsl(219_14%_28%)] text-white shadow-lg hover:bg-[hsl(219_14%_23%)] hover:shadow-xl active:shadow-md transition-all cursor-pointer font-semibold py-6">
                  Secondary Button
                </Button>
                <Button className="w-full rounded-md bg-[hsl(105_22%_25%)] text-white shadow-lg hover:bg-[hsl(105_22%_20%)] hover:shadow-xl active:shadow-md transition-all cursor-pointer font-semibold py-6">
