---
import { getCollection } from "astro:content";
import { Grid, List } from "lucide-react";
import { StaggeredFadeIn } from "@/components/features/StaggeredFadeIn";
import Layout from "../../layouts/Layout.astro";

// Disable view transitions for faster content loading
export const prerender = false;

// Get all Plans entries
const plans = await getCollection("plans");

// Get view mode from URL params, default to grid with 4 columns
const viewModeParam = Astro.url.searchParams.get("view") || "grid";
const viewMode =
	viewModeParam === "list" || viewModeParam === "grid" ? viewModeParam : "grid";
const gridColumnsParam = Astro.url.searchParams.get("columns") || "4";
const gridColumns =
	gridColumnsParam === "2" ||
	gridColumnsParam === "3" ||
	gridColumnsParam === "4"
		? gridColumnsParam
		: "4";

// Sort by updatedAt (most recent first)
const sortedPlans = plans.sort((a, b) => {
	const dateA = a.data.updatedAt?.getTime() || a.data.createdAt?.getTime() || 0;
	const dateB = b.data.updatedAt?.getTime() || b.data.createdAt?.getTime() || 0;
	return dateB - dateA;
});

// Calculate plan statistics
const planStats = {
	total: plans.length,
	completed: plans.filter(
		(p) => p.data.completedInferences >= p.data.totalInferences,
	).length,
	inProgress: plans.filter(
		(p) =>
			p.data.completedInferences > 0 &&
			p.data.completedInferences < p.data.totalInferences,
	).length,
	pending: plans.filter((p) => p.data.completedInferences === 0).length,
	averageProgress: Math.round(
		plans.reduce(
			(sum, p) =>
				sum + (p.data.completedInferences / p.data.totalInferences) * 100,
			0,
		) / plans.length,
	),
};
---

<Layout
  title="Plans"
  description="Feature implementation plans using 100-inference paradigm"
  sidebarInitialCollapsed
>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Header - No animations to improve load speed -->
    <div class="flex justify-between items-start mb-12">
      <div>
        <h1 class="text-4xl font-bold mb-4">Feature Plans</h1>
        <p class="text-lg text-muted-foreground mb-8">
          100-inference feature implementation plans using the ONE Platform inference-based paradigm
        </p>
      </div>

      <!-- View Toggle Buttons -->
      <div class="flex gap-2 items-center">
        <a
          href="/plans?view=list"
          class={`p-2 rounded-md hover:bg-accent hover:scale-110 transition-all duration-200 ${viewMode === 'list' ? 'bg-accent' : ''}`}
          title="List view"
        >
          <List className="w-5 h-5" />
        </a>
        <a
          href="/plans?view=grid&columns=2"
          class={`p-2 rounded-md hover:bg-accent hover:scale-110 transition-all duration-200 ${viewMode === 'grid' && gridColumns === '2' ? 'bg-accent' : ''}`}
          title="2 columns grid"
        >
          <Grid className="w-5 h-5" />
        </a>
        <a
          href="/plans?view=grid&columns=3"
          class={`p-2 rounded-md hover:bg-accent hover:scale-110 transition-all duration-200 ${viewMode === 'grid' && gridColumns === '3' ? 'bg-accent' : ''}`}
          title="3 columns grid"
        >
          <div class="w-5 h-5 grid grid-cols-3 gap-0.5">
            <div class="bg-current rounded-sm"></div>
            <div class="bg-current rounded-sm"></div>
            <div class="bg-current rounded-sm"></div>
          </div>
        </a>
        <a
          href="/plans?view=grid&columns=4"
          class={`p-2 rounded-md hover:bg-accent hover:scale-110 transition-all duration-200 ${viewMode === 'grid' && gridColumns === '4' ? 'bg-accent' : ''}`}
          title="4 columns grid"
        >
          <div class="w-5 h-5 grid grid-cols-2 grid-rows-2 gap-0.5">
            <div class="bg-current rounded-sm"></div>
            <div class="bg-current rounded-sm"></div>
            <div class="bg-current rounded-sm"></div>
            <div class="bg-current rounded-sm"></div>
          </div>
        </a>
      </div>
    </div>

    <!-- Statistics -->
    <div class="grid grid-cols-2 sm:grid-cols-4 gap-4 mb-12">
      <div class="bg-card border rounded-lg p-4">
        <div class="text-3xl font-bold">{planStats.total}</div>
        <div class="text-sm text-muted-foreground">Total Plans</div>
      </div>
      <div class="bg-card border rounded-lg p-4">
        <div class="text-3xl font-bold text-green-600">{planStats.completed}</div>
        <div class="text-sm text-muted-foreground">Completed</div>
      </div>
      <div class="bg-card border rounded-lg p-4">
        <div class="text-3xl font-bold text-blue-600">{planStats.inProgress}</div>
        <div class="text-sm text-muted-foreground">In Progress</div>
      </div>
      <div class="bg-card border rounded-lg p-4">
        <div class="text-3xl font-bold text-yellow-600">{planStats.averageProgress}%</div>
        <div class="text-sm text-muted-foreground">Avg Progress</div>
      </div>
    </div>

    <!-- Plans Grid with Staggered Animation -->
    {sortedPlans.length > 0 ? (
      <StaggeredFadeIn
        client:load
        delay={80}
        duration={500}
        staggerDirection="up"
      >
        {viewMode === 'grid' ? (
          <div class={`grid gap-6 grid-cols-1 ${gridColumns === '2' ? 'md:grid-cols-2' : gridColumns === '3' ? 'md:grid-cols-3' : 'md:grid-cols-4'}`}>
            {sortedPlans.map((plan) => {
          const progressPercent = Math.round((plan.data.completedInferences / plan.data.totalInferences) * 100);
          const status =
            progressPercent === 100 ? 'completed' :
            progressPercent > 0 ? 'in-progress' :
            'pending';

          return (
            <a href={`/plans/${plan.slug}`} class="group">
              <div class="bg-card border rounded-lg p-6 hover:border-accent hover:shadow-lg transition-all duration-300 h-full flex flex-col">
                {/* Header */}
                <div class="mb-4">
                  <div class="flex items-start justify-between mb-2">
                    <h3 class="text-lg font-semibold group-hover:text-accent transition-colors">{plan.data.title}</h3>
                    <span class={`px-2 py-1 rounded text-xs font-medium ${
                      status === 'completed' ? 'bg-green-100 text-green-700' :
                      status === 'in-progress' ? 'bg-blue-100 text-blue-700' :
                      'bg-gray-100 text-gray-700'
                    }`}>
                      {status === 'completed' ? '✓ Complete' : status === 'in-progress' ? 'In Progress' : 'Pending'}
                    </span>
                  </div>
                  <p class="text-sm text-muted-foreground line-clamp-2">{plan.data.description}</p>
                </div>

                {/* Feature & Specialist */}
                <div class="mb-4 flex-1">
                  {plan.data.feature && (
                    <div class="mb-2">
                      <div class="text-xs text-muted-foreground">Feature</div>
                      <div class="text-sm font-medium">{plan.data.feature}</div>
                    </div>
                  )}
                  {plan.data.assignedSpecialist && (
                    <div>
                      <div class="text-xs text-muted-foreground">Specialist</div>
                      <div class="text-sm font-medium">{plan.data.assignedSpecialist}</div>
                    </div>
                  )}
                </div>

                {/* Progress Bar */}
                <div class="mb-3">
                  <div class="flex justify-between items-center mb-1">
                    <span class="text-xs text-muted-foreground">Progress</span>
                    <span class="text-xs font-medium">{plan.data.completedInferences}/{plan.data.totalInferences}</span>
                  </div>
                  <div class="w-full bg-muted rounded-full h-2">
                    <div
                      class="bg-accent h-2 rounded-full transition-all duration-500"
                      style={{ width: `${progressPercent}%` }}
                    ></div>
                  </div>
                </div>

                {/* Metadata */}
                <div class="flex items-center justify-between text-xs text-muted-foreground pt-3 border-t">
                  <div>
                    {plan.data.ontologyDimensions && plan.data.ontologyDimensions.length > 0 && (
                      <span>{plan.data.ontologyDimensions.join(', ')}</span>
                    )}
                  </div>
                  <div>
                    {plan.data.updatedAt && (
                      <span>{new Date(plan.data.updatedAt).toLocaleDateString()}</span>
                    )}
                  </div>
                </div>
              </div>
            </a>
          );
            })}
          </div>
        ) : (
          <div class="space-y-3">
            {sortedPlans.map((plan) => {
              const progressPercent = Math.round((plan.data.completedInferences / plan.data.totalInferences) * 100);
              const status =
                progressPercent === 100 ? 'completed' :
                progressPercent > 0 ? 'in-progress' :
                'pending';

              return (
                <a href={`/plans/${plan.slug}`} class="group block">
                  <div class="bg-card border rounded-lg p-4 hover:border-accent hover:shadow-md transition-all duration-300">
                    <div class="flex items-center justify-between gap-4">
                      <div class="flex-1">
                        <div class="flex items-center gap-2 mb-2">
                          <h3 class="text-base font-semibold group-hover:text-accent transition-colors">{plan.data.title}</h3>
                          <span class={`px-2 py-0.5 rounded text-xs font-medium ${
                            status === 'completed' ? 'bg-green-100 text-green-700' :
                            status === 'in-progress' ? 'bg-blue-100 text-blue-700' :
                            'bg-gray-100 text-gray-700'
                          }`}>
                            {status === 'completed' ? '✓' : status === 'in-progress' ? '⟳' : '○'}
                          </span>
                        </div>
                        <p class="text-sm text-muted-foreground mb-2">{plan.data.description}</p>
                        <div class="flex items-center gap-4 text-xs text-muted-foreground">
                          {plan.data.feature && <span>{plan.data.feature}</span>}
                          {plan.data.assignedSpecialist && <span>{plan.data.assignedSpecialist}</span>}
                        </div>
                      </div>
                      <div class="flex-shrink-0 text-right">
                        <div class="text-sm font-medium mb-1">{progressPercent}%</div>
                        <div class="w-24 bg-muted rounded-full h-2">
                          <div
                            class="bg-accent h-2 rounded-full transition-all duration-500"
                            style={{ width: `${progressPercent}%` }}
                          ></div>
                        </div>
                        <div class="text-xs text-muted-foreground mt-1">{plan.data.completedInferences}/{plan.data.totalInferences}</div>
                      </div>
                    </div>
                  </div>
                </a>
              );
            })}
          </div>
        )}
      </StaggeredFadeIn>
    ) : (
      <div class="text-center py-12">
        <p class="text-lg text-muted-foreground mb-4">No plans yet</p>
        <p class="text-sm text-muted-foreground">Create your first feature plan to get started with the 100-inference paradigm</p>
      </div>
    )}
  </div>
</Layout>
