---

<Layout
  title="Landing Page Template Demo | ONE Platform"
  description="A demonstration of the new modular landing page template system with customizable sections and branding."
>
  <div class="min-h-screen bg-background">
    <!-- Render sections dynamically -->
    {pageConfig.sections.map((section) => {
      switch (section.type) {
        case 'hero':
          return (
            <HeroSection
              section={section as any}
              branding={pageConfig.branding}
            />
          );
        case 'features':
          return (
            <FeaturesSection
              section={section as any}
              branding={pageConfig.branding}
            />
          );
        case 'testimonials':
          return (
            <TestimonialsSection
              section={section as any}
              branding={pageConfig.branding}
            />
          );
        case 'how-it-works':
          return (
            <HowItWorksSection
              section={section as any}
              branding={pageConfig.branding}
            />
          );
        case 'faq':
          return (
            <FAQSection
              section={section as any}
              branding={pageConfig.branding}
            />
          );
        case 'cta':
          return (
            <CTASection
              section={section as any}
              branding={pageConfig.branding}
            />
          );
        default:
          return null;
      }
    })}

    <!-- Footer -->
    <footer class="border-t px-4 py-8 sm:px-6 md:px-8 text-center">
      <div class="mx-auto max-w-2xl space-y-2">
        <p class="text-sm text-muted-foreground">
          This is a demo of the new landing page template system.
        </p>
        <p class="text-xs text-muted-foreground">
          All sections are customizable and reusable across different landing pages.
        </p>
      </div>
    </footer>
  </div>
</Layout>
