---
/**
 * Video Detail Page - Dynamic Route
 *
 * Displays a single video with the VideoPlayer component.
 * Fetches video data from YouTube API using the video ID from the URL.
 *
 * Route: /videos/[slug]
 * Example: /videos/VguPAHfksEY (YouTube video ID)
 */

import Layout from '@/layouts/Layout.astro';
import { VideoPlayer } from '@/components/media/VideoPlayer';
import { fetchYouTubeVideo, fetchYouTubeVideos } from '@/services/youtube';

// Get YouTube API credentials
const YOUTUBE_API_KEY = import.meta.env.YOUTUBE_API_KEY;
const YOUTUBE_CHANNEL_ID = import.meta.env.YOUTUBE_CHANNEL_ID;

// Generate static paths for all videos from YouTube
export async function getStaticPaths() {
  const YOUTUBE_API_KEY = import.meta.env.YOUTUBE_API_KEY;
  const YOUTUBE_CHANNEL_ID = import.meta.env.YOUTUBE_CHANNEL_ID;

  if (!YOUTUBE_API_KEY || !YOUTUBE_CHANNEL_ID) {
    console.warn('YouTube API credentials not configured');
    return [];
  }

  try {
    const videos = await fetchYouTubeVideos(YOUTUBE_API_KEY, YOUTUBE_CHANNEL_ID, 50);

    return videos.map(video => ({
      params: { slug: video.id },
      props: { video }
    }));
  } catch (error) {
    console.error('Error fetching videos for static paths:', error);
    return [];
  }
}

// Get video ID from URL params
const videoId = Astro.params.slug;

// Try to get video from props first (build time), otherwise fetch (dev mode)
let videoData = Astro.props.video;

if (!videoData && YOUTUBE_API_KEY) {
  try {
    videoData = await fetchYouTubeVideo(YOUTUBE_API_KEY, videoId);
  } catch (error) {
    console.error('Error fetching video:', error);
  }
}

// If no video found, redirect to videos page
if (!videoData) {
  return Astro.redirect('/videos');
}

// Page metadata
const pageTitle = `${videoData.title} - ONE Platform`;
const pageDescription = videoData.description;
---

<Layout
  title={pageTitle}
  description={pageDescription}
  sidebarInitialCollapsed={false}
>
  <!-- Page Container - responsive padding and max-width -->
  <div class="container mx-auto py-6 sm:py-8 lg:py-12 px-4 sm:px-6 lg:px-8 max-w-5xl">
    <!-- Back to Gallery Link -->
    <div class="mb-4 sm:mb-6">
      <a
        href="/videos"
        class="inline-flex items-center gap-2 text-sm text-muted-foreground hover:text-foreground transition-colors"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-4 w-4"
          viewBox="0 0 20 20"
          fill="currentColor"
        >
          <path
            fill-rule="evenodd"
            d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z"
            clip-rule="evenodd"
          />
        </svg>
        Back to Videos
      </a>
    </div>

    <!-- Video Player -->
    <div class="mb-6 sm:mb-8">
      <VideoPlayer
        youtubeId={videoData.id}
        title={videoData.title}
        videoId={videoData.id}
        poster={videoData.thumbnail}
        aspectRatio="16/9"
        client:load
      />
    </div>

    <!-- Video Metadata -->
    <div class="space-y-4 sm:space-y-6">
      <!-- Title and Author -->
      <div>
        <h1 class="text-2xl sm:text-3xl lg:text-4xl font-bold mb-2 sm:mb-3">
          {videoData.title}
        </h1>
        <div class="flex flex-wrap items-center gap-3 text-sm sm:text-base text-muted-foreground">
          {videoData.channelTitle && (
            <span class="font-medium">{videoData.channelTitle}</span>
          )}
          <span>•</span>
          <time datetime={videoData.publishedAt.toISOString()}>
            {videoData.publishedAt.toLocaleDateString('en-US', {
              year: 'numeric',
              month: 'long',
              day: 'numeric'
            })}
          </time>
          {videoData.viewCount > 0 && (
            <>
              <span>•</span>
              <span>{videoData.viewCount.toLocaleString()} views</span>
            </>
          )}
          {videoData.likeCount > 0 && (
            <>
              <span>•</span>
              <span>{videoData.likeCount.toLocaleString()} likes</span>
            </>
          )}
        </div>
      </div>

      <!-- Tags -->
      {videoData.tags && videoData.tags.length > 0 && (
        <div class="flex flex-wrap gap-2">
          {videoData.tags.slice(0, 10).map(tag => (
            <span class="inline-flex items-center rounded-md border px-2.5 py-0.5 text-xs font-semibold transition-colors focus:outline-none focus:ring-2 focus:ring-ring focus:ring-offset-2 border-transparent bg-secondary text-secondary-foreground hover:bg-secondary/80">
              {tag}
            </span>
          ))}
        </div>
      )}

      <!-- Description -->
      <div class="prose prose-lg dark:prose-invert max-w-none">
        <p class="text-base sm:text-lg leading-relaxed whitespace-pre-line">
          {videoData.description}
        </p>
      </div>
    </div>
  </div>
</Layout>
