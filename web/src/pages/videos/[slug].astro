---
/**
 * Video Detail Page - Dynamic Route
 *
 * Displays a single video with the VideoPlayer component.
 * Supports Mux, YouTube, and direct video URLs.
 *
 * Route: /videos/[slug]
 * Example: /videos/one-platform-installation
 */

import { getCollection, type CollectionEntry } from 'astro:content';
import Layout from '@/layouts/Layout.astro';
import { VideoPlayer } from '@/components/media/VideoPlayer';

// Prerender all video pages as static to reduce Worker bundle size
export const prerender = true;

// Generate static paths for all videos
export async function getStaticPaths() {
  const videos = await getCollection('videos');

  return videos.map(video => ({
    params: { slug: video.slug },
    props: { video }
  }));
}

// Get video data from props
const { video } = Astro.props;

// In dev mode, if video is not in props, fetch it from collection
if (!video) {
  const videos = await getCollection('videos');
  const currentVideo = videos.find(v => v.slug === Astro.params.slug);

  if (!currentVideo) {
    return Astro.redirect('/videos');
  }

  // Re-assign to use below
  Astro.props.video = currentVideo;
}

const videoData = video || Astro.props.video;

// Page metadata
const pageTitle = `${videoData.data.title} - ONE Platform`;
const pageDescription = videoData.data.description;
---

<Layout
  title={pageTitle}
  description={pageDescription}
  sidebarInitialCollapsed={false}
>
  <!-- Page Container - responsive padding and max-width -->
  <div class="container mx-auto py-6 sm:py-8 lg:py-12 px-4 sm:px-6 lg:px-8 max-w-5xl">
    <!-- Back to Gallery Link -->
    <div class="mb-4 sm:mb-6">
      <a
        href="/videos"
        class="inline-flex items-center gap-2 text-sm text-muted-foreground hover:text-foreground transition-colors"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-4 w-4"
          viewBox="0 0 20 20"
          fill="currentColor"
        >
          <path
            fill-rule="evenodd"
            d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z"
            clip-rule="evenodd"
          />
        </svg>
        Back to Videos
      </a>
    </div>

    <!-- Video Player -->
    <div class="mb-6 sm:mb-8">
      <VideoPlayer
        playbackId={videoData.data.playbackId}
        muxAssetId={videoData.data.muxAssetId}
        youtubeId={videoData.data.youtubeId}
        videoUrl={videoData.data.videoUrl}
        title={videoData.data.title}
        videoId={videoData.slug}
        poster={videoData.data.thumbnail}
        aspectRatio="16/9"
        client:load
      />
    </div>

    <!-- Video Metadata -->
    <div class="space-y-4 sm:space-y-6">
      <!-- Title and Author -->
      <div>
        <h1 class="text-2xl sm:text-3xl lg:text-4xl font-bold mb-2 sm:mb-3">
          {videoData.data.title}
        </h1>
        <div class="flex flex-wrap items-center gap-3 text-sm sm:text-base text-muted-foreground">
          {videoData.data.author && (
            <span class="font-medium">{videoData.data.author}</span>
          )}
          <span>â€¢</span>
          <time datetime={videoData.data.publishedAt.toISOString()}>
            {videoData.data.publishedAt.toLocaleDateString('en-US', {
              year: 'numeric',
              month: 'long',
              day: 'numeric'
            })}
          </time>
        </div>
      </div>

      <!-- Categories and Tags -->
      {(videoData.data.categories.length > 0 || videoData.data.tags.length > 0) && (
        <div class="flex flex-wrap gap-2">
          {videoData.data.categories.map(category => (
            <span class="inline-flex items-center rounded-md border px-2.5 py-0.5 text-xs font-semibold transition-colors focus:outline-none focus:ring-2 focus:ring-ring focus:ring-offset-2 border-transparent bg-primary text-primary-foreground hover:bg-primary/80">
              {category}
            </span>
          ))}
          {videoData.data.tags.map(tag => (
            <span class="inline-flex items-center rounded-md border px-2.5 py-0.5 text-xs font-semibold transition-colors focus:outline-none focus:ring-2 focus:ring-ring focus:ring-offset-2 border-transparent bg-secondary text-secondary-foreground hover:bg-secondary/80">
              {tag}
            </span>
          ))}
        </div>
      )}

      <!-- Description -->
      <div class="prose prose-lg dark:prose-invert max-w-none">
        <p class="text-base sm:text-lg leading-relaxed">
          {videoData.data.description}
        </p>
      </div>

      <!-- Video Content (Markdown) -->
      {videoData.body && (
        <div class="prose prose-lg dark:prose-invert max-w-none border-t pt-6 sm:pt-8">
          <div set:html={videoData.body} />
        </div>
      )}
    </div>
  </div>
</Layout>
