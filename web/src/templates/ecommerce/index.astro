<Layout title="ONE Store - Premium Products" description="Discover premium products">
  <div class="min-h-screen bg-background">
    <!-- Hero Section -->
    <section class="relative overflow-hidden bg-gradient-to-br from-primary/10 via-secondary/10 to-accent/10 py-20 md:py-32">
      <div class="container mx-auto px-4">
        <div class="mx-auto max-w-3xl text-center">
          <h1 class="text-4xl font-bold tracking-tight text-foreground md:text-6xl">
            Discover Premium
            <span class="bg-gradient-to-r from-primary via-secondary to-accent bg-clip-text text-transparent">
              Quality Products
            </span>
          </h1>
          <p class="mt-6 text-lg text-muted-foreground md:text-xl">
            Shop our curated collection of premium products. Free shipping on orders over $50.
          </p>
          <div class="mt-8 flex flex-col gap-4 sm:flex-row sm:justify-center">
            <Button asChild size="lg">
              <a href="#featured">Shop Now</a>
            </Button>
            <Button asChild variant="outline" size="lg">
              <a href="/store/category/all">View All Products</a>
            </Button>
          </div>
        </div>
      </div>
    </section>

    <!-- Categories Section -->
    <section class="py-16">
      <div class="container mx-auto px-4">
        <div class="mb-8 text-center">
          <h2 class="text-3xl font-bold text-foreground">Shop by Category</h2>
          <p class="mt-2 text-muted-foreground">Explore our diverse product categories</p>
        </div>
        <div class="grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-3">
          {categories.map((category) => <CategoryCard category={category} />)}
        </div>
      </div>
    </section>

    <!-- Featured Products Section -->
    <section id="featured" class="bg-muted/30 py-16">
      <div class="container mx-auto px-4">
        <div class="mb-8 text-center">
          <h2 class="text-3xl font-bold text-foreground">Featured Products</h2>
          <p class="mt-2 text-muted-foreground">Hand-picked favorites just for you</p>
        </div>
        <ProductGrid columns={3}>
          {featuredProducts.map((product) => (
            <ProductCard client:load product={product} />
          ))}
        </ProductGrid>
